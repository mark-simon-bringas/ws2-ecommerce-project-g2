<div class="auth-container">
    <div class="auth-card">
        <div class="text-center">
            <div class="mb-4">
                <i class="bi bi-info-circle-fill" style="font-size: 3rem; color: var(--link-color);"></i>
            </div>
            
            <h1 class="h2 mb-3"><%= title %></h1>
            <p class="lead text-body-secondary">
                <%= message %>
            </p>
            <hr class="my-4">
            <a href="<%= buttonLink %>" class="btn btn-primary btn-lg">
                <%= buttonText %>
            </a>
        </div>
    </div>
</div>