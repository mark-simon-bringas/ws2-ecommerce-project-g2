<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/mobile.css">
    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    <title><%= title %> | sneakslab</title>
</head>
<body>

    <div class="navbar-desktop">
      <ul>
        <li><a href="/"><span class="iconify" data-icon="ion:footsteps-sharp" style="color: white;" data-width="22" data-height="22"></span></a></li>
        <li><a class="list-menu" href="/products">Shop</a></li>
        <li><a class="list-menu" href="/products?category=men">Men</a></li>
        <li><a class="list-menu" href="/products?category=women">Women</a></li>
        <li><a class="list-menu" href="/products?new=true">New Arrivals</a></li>
        <li><a href="#">Contact</a></li>
        <li><a href="#" id="desktop-search-btn"><span class="iconify" data-icon="material-symbols:search-rounded" style="color: white;" data-width="20" data-height="20"></span></a></li>
        <li class="cart-icon-container">
            <a href="/cart">
                <span class="iconify" data-icon="material-symbols:shopping-bag-outline" style="color: white;" data-width="20" data-height="20"></span>
                <% if (typeof cart !== 'undefined' && cart && cart.totalQty > 0) { %>
                    <span class="cart-badge"><%= cart.totalQty %></span>
                <% } %>
            </a>
        </li>
        
        <% if (currentUser) { %>
            <li class="user-menu-container">
                <a href="#" id="user-menu-btn">
                    <span class="iconify" data-icon="material-symbols:person-outline" style="color: white;" data-width="22" data-height="22"></span>
                </a>
                <div class="user-dropdown-menu" id="user-dropdown">
                    <a href="/account" class="user-dropdown-link">
                        <span class="iconify" data-icon="ic:round-dashboard" data-width="20" data-height="20"></span> Account
                    </a>
                    <a href="/users/logout" class="user-dropdown-link">
                        <span class="iconify" data-icon="material-symbols:logout" data-width="20" data-height="20"></span> Logout
                    </a>
                </div>
            </li>
        <% } else { %>
            <li><a href="/users/login"><span class="iconify" data-icon="material-symbols:person-outline" style="color: white;" data-width="22" data-height="22"></span></a></li>
        <% } %>
      </ul>
    </div>
    
    <div class="navbar-mobile">
        <a href="/" class="navbar-mobile-link"><span class="iconify" data-icon="ion:footsteps-sharp" style="color: white;" data-width="24" data-height="24"></span></a>
        <div class="navbar-mobile-actions">
            <a href="#" class="navbar-mobile-link" id="mobile-search-btn"><span class="iconify" data-icon="material-symbols:search-rounded" style="color: white;" data-width="24" data-height="24"></span></a>
            <a href="/cart" class="navbar-mobile-link cart-icon-container">
                <span class="iconify" data-icon="material-symbols:shopping-bag-outline" style="color: white;" data-width="24" data-height="24"></span>
                <% if (typeof cart !== 'undefined' && cart && cart.totalQty > 0) { %>
                    <span class="cart-badge"><%= cart.totalQty %></span>
                <% } %>
            </a>
            <a href="#" class="navbar-mobile-link" id="mobile-menu-btn"><div class="hamburger-icon"><span></span><span></span></div></a>
        </div>
    </div>

    <div class="overlay" id="mobile-menu-overlay">
        <button class="overlay-close-btn" id="mobile-menu-close-btn">&times;</button>
        <ul>
            <li><a href="/products">Shop</a></li><li><a href="/products?category=men">Men</a></li><li><a href="/products?category=women">Women</a></li><li><a href="/products?new=true">New Arrivals</a></li><li><a href="#">Contact</a></li>
            <% if (currentUser) { %>
                <li><a href="/account">My Account</a></li>
                <li><a href="/users/logout">Logout</a></li>
            <% } else { %>
                <li><a href="/users/login">Login</a></li>
            <% } %>
        </ul>
    </div>

    <div class="overlay" id="search-overlay">
        <button class="overlay-close-btn" id="search-overlay-close-btn">&times;</button>
        <form action="/products/search" method="GET">
            <div class="search-content">
                <div class="search-input-group">
                    <span class="iconify" data-icon="material-symbols:search-rounded" data-width="28" data-height="28"></span>
                    <input type="text" name="q" placeholder="Search sneakslab.com" required>
                </div>
                <div class="quick-links">
                    <span>Quick Links</span>
                    <ul>
                        <li><a href="/products/search?q=New Arrivals">→ New Arrivals</a></li>
                        <li><a href="/products/search?q=Jordan">→ Jordan</a></li>
                        <li><a href="/products/search?q=Nike Dunk">→ Nike Dunk</a></li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
    
    <div class="dropdown">
      <div class="con-1"><ul class="main"><span>Shop</span><li><a href="/products">Shop the Latest</a></li><li><a href="/products?category=men">Shop Men's</a></li><li><a href="/products?category=women">Shop Women's</a></li><li><a href="/products?new=true">Shop New Arrivals</a></li></ul><ul><span>Quick Links</span><li><a href="#">Find a Store</a></li><li><a href="#">Order Status</a></li><li><a href="#">Financing</a></li></ul></div>
      <div class="con-1"><ul class="main"><span>Shop Men's</span><li><a href="/products?new=true&category=men">New Releases</a></li><li><a href="/products?brand=Nike&category=men">Nike</a></li><li><a href="/products?brand=Jordan&category=men">Jordan</a></li><li><a href="/products?brand=adidas&category=men">Adidas</a></li></ul><ul><span>Featured</span><li><a href="#">Bestsellers</a></li><li><a href="#">Clearance</a></li></ul></div>
      <div class="con-1"><ul class="main"><span>Shop Women's</span><li><a href="/products?new=true&category=women">New Releases</a></li><li><a href="/products?brand=Nike&category=women">Nike</a></li><li><a href="/products?brand=Jordan&category=women">Jordan</a></li><li><a href="/products?brand=adidas&category=women">Adidas</a></li></ul><ul><span>Featured</span><li><a href="#">Bestsellers</a></li><li><a href="#">Clearance</a></li></ul></div>
      <div class="con-1"><ul class="main"><span>New Arrivals</span><li><a href="/products?new=true">Shop All New Arrivals</a></li><li><a href="/products?new=true&category=men">Latest Men's</a></li><li><a href="/products?new=true&category=women">Latest Women's</a></li></ul><ul><span>Featured</span><li><a href="#">Hottest Releases</a></li></ul></div>
      <div class="con-1 dropdown-search-panel">
        <form action="/products/search" method="GET">
            <div class="search-content">
                <div class="search-input-group">
                    <span class="iconify" data-icon="material-symbols:search-rounded" data-width="28" data-height="28"></span>
                    <input type="text" name="q" placeholder="Search sneakslab.com" required>
                </div>
                <div class="quick-links">
                    <span>Quick Links</span>
                    <ul>
                        <li><a href="/products/search?q=Jordan">Jordan</a></li>
                        <li><a href="/products/search?q=Nike+Dunk">Nike Dunk</a></li>
                        <li><a href="/products/search?q=New+Arrivals">New Arrivals</a></li>
                        <li><a href="/products/search?q=Adidas+Samba">Adidas Samba</a></li>
                        <li><a href="/products/search?q=New+Balance+550">New Balance 550</a></li>
                        <li><a href="/products/search?q=Nike+Air+Force+1">Nike Air Force 1</a></li>
                        <li><a href="/products/search?q=Lifestyle">Lifestyle</a></li>
                        <li><a href="/products/search?q=Running">Running</a></li>
                        <li><a href="/products/search?q=Converse">Converse</a></li>
                    </ul>
                </div>
            </div>
        </form>
      </div>
    </div>
    
    <div class="content-wrapper">
        <% const isDashboard = typeof view !== 'undefined' && (view.startsWith('admin-') || ['orders', 'settings'].includes(view)); %>
        
        <% if (isDashboard) { %>
            <div class="dashboard-layout">
                <aside class="dashboard-sidebar">
                    <div class="nav-container">
                        <div>
                            <a href="/account" class="brand">
                                <span class="iconify" data-icon="ion:footsteps-sharp" data-width="28" data-height="28"></span>
                                <span>sneakslab</span>
                            </a>
                            <nav class="nav flex-column">
                                <% if (user.role === 'admin') { %>
                                    <h6 class="nav-heading">Admin</h6>
                                    <a class="nav-link <%= (view === 'admin-dashboard') ? 'active' : '' %>" href="/account/admin/dashboard">
                                        <i class="bi bi-grid-1x2-fill"></i>
                                        <span>Dashboard</span>
                                    </a>
                                    <a class="nav-link <%= (view === 'admin-orders') ? 'active' : '' %>" href="/account/admin/orders">
                                        <i class="bi bi-list-check"></i>
                                        <span>Orders</span>
                                    </a>
                                    <a class="nav-link <%= (view === 'admin-users') ? 'active' : '' %>" href="/account/admin/users">
                                        <i class="bi bi-people-fill"></i>
                                        <span>Users</span>
                                    </a>
                                    <a class="nav-link <%= (view === 'admin-products') ? 'active' : '' %>" href="/products/manage">
                                        <i class="bi bi-box-seam-fill"></i>
                                        <span>Products</span>
                                    </a>
                                <% } %>
                                <h6 class="nav-heading mt-4">My Account</h6>
                                <a class="nav-link <%= (view === 'orders') ? 'active' : '' %>" href="/account/orders">
                                    <i class="bi bi-receipt"></i>
                                    <span>Order History</span>
                                </a>
                                <a class="nav-link <%= (view === 'settings') ? 'active' : '' %>" href="/account/settings">
                                    <i class="bi bi-person-circle"></i>
                                    <span>Account Settings</span>
                                </a>
                            </nav>
                        </div>
                        <a class="nav-link" href="/users/logout">
                            <i class="bi bi-box-arrow-left"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </aside>
                <main class="dashboard-main-content">
                    <%- body %>
                </main>
            </div>
        <% } else { %>
            <main class="container-fluid p-0">
                <%- body %>
            </main>
        <% } %>
    </div>
    
    <% if (typeof isDashboard !== 'undefined' && isDashboard) { %>
    <div class="bottom-navbar d-lg-none">
        <% if (user.role === 'admin') { %>
            <a href="/account/admin/dashboard" class="bottom-navbar-link <%= (view === 'admin-dashboard') ? 'active' : '' %>">
                <i class="bi bi-grid-1x2-fill"></i>
                <span>Dashboard</span>
            </a>
            <a href="/account/admin/orders" class="bottom-navbar-link <%= (view === 'admin-orders') ? 'active' : '' %>">
                <i class="bi bi-list-check"></i>
                <span>Orders</span>
            </a>
            <a href="/products/manage" class="bottom-navbar-link <%= (view === 'admin-products') ? 'active' : '' %>">
                <i class="bi bi-box-seam-fill"></i>
                <span>Products</span>
            </a>
        <% } %>
        <a href="/account/orders" class="bottom-navbar-link <%= (view === 'orders') ? 'active' : '' %>">
            <i class="bi bi-receipt"></i>
            <span>Orders</span>
        </a>
        <a href="/account/settings" class="bottom-navbar-link <%= (view === 'settings') ? 'active' : '' %>">
            <i class="bi bi-person-circle"></i>
            <span>Settings</span>
        </a>
    </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
</body>
</html>