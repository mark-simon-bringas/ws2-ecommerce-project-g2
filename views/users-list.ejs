<%- include('partials/header') %>
<div class="card">
    <h1 class="card-title"><%= title %></h1>
    <% if (users.length > 0) { %>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td class="action-links">
                            <a href="/users/edit/<%= user._id %>">Edit</a>
                            <form action="/users/delete/<%= user._id %>" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-users-message">No users registered yet.</p>
    <% } %>
</div>
<%- include('partials/footer') %>