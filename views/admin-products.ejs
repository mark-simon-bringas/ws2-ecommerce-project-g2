<div class="settings-page-wrapper" style="max-width: 1200px;">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div class="d-flex align-items-center mb-3 mb-md-0">
            <a href="/account/settings" class="btn btn-icon btn-light rounded-circle me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 fw-bold mb-0">Products</h1>
                <p class="text-body-secondary small mb-0">Manage inventory & imports</p>
            </div>
        </div>
    </div>

    <div class="mb-4 overflow-x-auto">
        <div class="nav nav-pills flex-nowrap gap-2" id="product-tabs" role="tablist">
            <button class="nav-link active rounded-pill px-4 border-0" id="inventory-tab" data-bs-toggle="tab" data-bs-target="#nav-inventory" type="button" role="tab">
                <i class="bi bi-box-seam me-2"></i>My Inventory
            </button>
            <button class="nav-link rounded-pill px-4 border-0 text-secondary bg-light" id="import-tab" data-bs-toggle="tab" data-bs-target="#nav-import" type="button" role="tab">
                <i class="bi bi-cloud-download me-2"></i>Import New
            </button>
        </div>
    </div>

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-inventory" role="tabpanel" tabindex="0">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white border-bottom-0 p-4">
                    <form action="/products/manage" method="GET" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-search text-secondary"></i></span>
                                <input type="text" class="form-control bg-light border-0" name="q" placeholder="Search by name or SKU..." value="<%= filters.q || '' %>">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select bg-light border-0" name="brand" onchange="this.form.submit()">
                                <option value="">All Brands</option>
                                <% const brands = [...new Set(localProducts.map(p => p.brand))]; %>
                                <% brands.sort().forEach(brand => { %>
                                    <option value="<%= brand %>" <%= (filters.brand === brand) ? 'selected' : '' %>><%= brand %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select bg-light border-0" name="sort" onchange="this.form.submit()">
                                <option value="date-desc">Newest First</option>
                                <option value="price-desc">Price: High to Low</option>
                                <option value="price-asc">Price: Low to High</option>
                            </select>
                        </div>
                    </form>
                </div>

                <div class="card-body p-0">
                    <% if (localProducts && localProducts.length > 0) { %>
                        <div class="table-responsive d-none d-md-block">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 py-3 text-secondary small text-uppercase border-0">Product</th>
                                        <th class="py-3 text-secondary small text-uppercase border-0">SKU</th>
                                        <th class="py-3 text-secondary small text-uppercase border-0">Price</th>
                                        <th class="py-3 text-secondary small text-uppercase border-0">Stock</th>
                                        <th class="pe-4 py-3 text-end text-secondary small text-uppercase border-0">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% localProducts.forEach(product => { %>
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= product.thumbnailUrl %>" alt="" class="rounded-3 me-3 border" style="width: 48px; height: 48px; object-fit: contain; background: #f8f9fa;">
                                                    <div>
                                                        <div class="fw-bold text-dark"><%= product.name %></div>
                                                        <small class="text-body-secondary"><%= product.brand %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><span class="badge bg-light text-dark border font-monospace"><%= product.sku %></span></td>
                                            <td class="fw-bold">$<%= product.retailPrice %></td>
                                            <td>
                                                <% 
                                                    const totalStock = product.stock ? Object.values(product.stock).reduce((a, b) => a + b, 0) : 0;
                                                %>
                                                <% if (totalStock > 0) { %>
                                                    <span class="text-success small fw-bold"><i class="bi bi-check-circle-fill me-1"></i> <%= totalStock %> in stock</span>
                                                <% } else { %>
                                                    <span class="text-danger small fw-bold"><i class="bi bi-x-circle-fill me-1"></i> Out of stock</span>
                                                <% } %>
                                            </td>
                                            <td class="text-end pe-4">
                                                <a href="/products/stock/<%= product._id %>" class="btn btn-sm btn-light border rounded-pill px-3">Edit</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-md-none">
                            <% localProducts.forEach(product => { %>
                                <div class="p-3 border-bottom d-flex gap-3 align-items-center">
                                    <img src="<%= product.thumbnailUrl %>" alt="" class="rounded-3 border" style="width: 64px; height: 64px; object-fit: contain; background: #f8f9fa;">
                                    <div class="flex-grow-1">
                                        <h6 class="fw-bold mb-1 text-truncate" style="max-width: 200px;"><%= product.name %></h6>
                                        <div class="d-flex gap-2 mb-1">
                                            <span class="badge bg-light text-dark border"><%= product.brand %></span>
                                            <span class="fw-bold small">$<%= product.retailPrice %></span>
                                        </div>
                                        <div class="small text-secondary text-truncate">SKU: <%= product.sku %></div>
                                    </div>
                                    <a href="/products/stock/<%= product._id %>" class="btn btn-icon-sm btn-light border rounded-circle flex-shrink-0">
                                        <i class="bi bi-pencil-fill small"></i>
                                    </a>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="text-center p-5">
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-box text-secondary fs-4"></i>
                            </div>
                            <p class="text-secondary mb-0">No products found.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="nav-import" role="tabpanel" tabindex="0">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-1">Search Database</h5>
                    <p class="text-secondary small mb-4">Find and import products from the global sneaker database.</p>
                    
                    <form id="search-form" class="row g-3">
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control bg-light border-0" name="query" placeholder="e.g., Jordan 1 Retro High" required>
                            </div>
                        </div>
                        <div class="col-lg-4 d-grid">
                            <button class="btn btn-dark rounded-pill" type="submit" id="search-button">Search</button>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="hasDescription" value="true" id="hasDesc" checked>
                                <label class="form-check-label small text-secondary" for="hasDesc">Must have description</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <form action="/products/import-multiple" method="POST" id="multi-import-form">
                <div id="results-container" class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                    <div class="col-12 text-center py-5">
                        <p class="text-secondary">Search for products to begin importing.</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="floating-action-bar" id="import-action-bar">
    <div class="d-flex justify-content-between align-items-center gap-3">
        <span class="fw-bold text-white small"><span id="selected-import-count">0</span> Selected</span>
        <button type="submit" form="multi-import-form" class="btn btn-light btn-sm rounded-pill fw-bold px-3">
            Import Now
        </button>
    </div>
</div>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
    .btn-icon-sm {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    /* Nav Pills Styling */
    .nav-pills .nav-link {
        color: var(--text-color);
        font-weight: 500;
        transition: all 0.2s;
    }
    .nav-pills .nav-link.active {
        background-color: var(--nike-black);
        color: #fff;
    }
</style>

<script>
    // JS for Import Tab (Simplified for brevity, assumes main.js handles the fetch logic)
    // This ensures the tabs toggle correctly
    const tabs = document.querySelectorAll('#product-tabs button');
    tabs.forEach(tab => {
        tab.addEventListener('click', function (event) {
            event.preventDefault();
            // Bootstrap Tab Logic is handled via data-bs-target, but we can add custom visual logic here if needed
            tabs.forEach(t => {
                t.classList.remove('active', 'bg-dark', 'text-white');
                t.classList.add('text-secondary', 'bg-light');
            });
            this.classList.add('active', 'bg-dark', 'text-white');
            this.classList.remove('text-secondary', 'bg-light');
        })
    });
</script>