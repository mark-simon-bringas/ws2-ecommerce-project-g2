<div class="page-header">
    <h1>Product Management</h1>
    <p>Manage your store's inventory and import new products from the supplier database.</p>
</div>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-inventory-tab" data-bs-toggle="tab" data-bs-target="#nav-inventory" type="button" role="tab" aria-controls="nav-inventory" aria-selected="true">My Inventory</button>
        <button class="nav-link" id="nav-import-tab" data-bs-toggle="tab" data-bs-target="#nav-import" type="button" role="tab" aria-controls="nav-import" aria-selected="false">Import Products</button>
    </div>
</nav>

<div class="tab-content" id="nav-tabContent">
    <%# My Inventory Pane %>
    <div class="tab-pane fade show active" id="nav-inventory" role="tabpanel" aria-labelledby="nav-inventory-tab" tabindex="0">
        
        <div class="row g-4 mt-3">
            <div class="col-md-6">
                <div class="dashboard-card h-100">
                     <div class="card-body d-flex align-items-center gap-4">
                        <div class="stat-icon bg-primary-subtle text-primary-emphasis"><i class="bi bi-box-seam-fill"></i></div>
                        <div>
                            <p class="stat-value mb-0"><%= localProducts.length %></p>
                            <p class="stat-title mb-0">Total Products</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="dashboard-card h-100">
                    <div class="card-body d-flex align-items-center gap-4">
                        <div class="stat-icon bg-success-subtle text-success-emphasis"><i class="bi bi-currency-dollar"></i></div>
                        <div>
                            <% const totalValue = localProducts.reduce((sum, p) => sum + p.retailPrice, 0); %>
                            <p class="stat-value mb-0">$<%= totalValue.toLocaleString() %></p>
                            <p class="stat-title mb-0">Total Inventory Value</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="dashboard-card mt-4">
            <div class="card-body">
                <div class="row g-3 mb-4">
                    <div class="col-lg-6">
                        <input type="text" class="form-control form-control-lg form-control-clean" id="inventory-search-input" placeholder="Search by name or SKU...">
                    </div>
                    <div class="col-lg-3">
                        <select class="form-select form-select-lg form-control-clean" id="inventory-brand-filter">
                            <option value="">All Brands</option>
                             <% const brands = [...new Set(localProducts.map(p => p.brand))]; %>
                             <% brands.sort().forEach(brand => { %>
                                <option value="<%= brand %>"><%= brand %></option>
                             <% }) %>
                        </select>
                    </div>
                    <div class="col-lg-3">
                         <select class="form-select form-select-lg form-control-clean" id="inventory-sort">
                            <option value="name-asc">Sort by Name (A-Z)</option>
                            <option value="name-desc">Sort by Name (Z-A)</option>
                            <option value="price-desc">Sort by Price (High-Low)</option>
                            <option value="price-asc">Sort by Price (Low-High)</option>
                        </select>
                    </div>
                </div>

                <form action="/products/delete-multiple" method="POST" id="inventory-delete-form">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="inventory-table">
                            <thead>
                                <tr>
                                    <th style="width: 5%;"><input class="form-check-input" type="checkbox" id="select-all-inventory"></th>
                                    <th style="width: 10%;">Image</th>
                                    <th>Name</th>
                                    <th>SKU</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% localProducts.forEach(product => { %>
                                    <tr data-brand="<%= product.brand %>" data-name="<%= product.name.toLowerCase() %>" data-price="<%= product.retailPrice %>">
                                        <td><input class="form-check-input inventory-checkbox" type="checkbox" name="productIds" value="<%= product._id %>"></td>
                                        <td><img src="<%= product.thumbnailUrl %>" alt="<%= product.name %>" class="img-fluid rounded-2"></td>
                                        <td>
                                            <div class="fw-semibold"><%= product.name %></div>
                                            <div class="small text-body-secondary"><%= product.brand %></div>
                                        </td>
                                        <td><small class="text-monospace text-body-secondary"><%= product.sku %></small></td>
                                        <td class="fw-semibold">$<%= product.retailPrice %></td>
                                        <td>
                                            <form action="/products/delete" method="POST" style="display: inline;">
                                                <input type="hidden" name="productId" value="<%= product._id %>">
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </form>
                 <% if (!localProducts || localProducts.length === 0) { %>
                    <p class="text-body-secondary p-4 text-center">You haven't imported any products yet. Use the "Import Products" tab to find some.</p>
                <% } %>
                
                <nav class="d-flex justify-content-end mt-4" id="inventory-pagination">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <%# Import Products Pane %>
    <div class="tab-pane fade" id="nav-import" role="tabpanel" aria-labelledby="nav-import-tab" tabindex="0">
        <div class="dashboard-card mt-4">
            <div class="card-body">
                <div class="mb-4">
                    <h2 class="h4 card-title">Find Products to Import</h2>
                    <p class="card-subtitle text-body-secondary">Search The Sneaker Database and select products to add to your store.</p>
                </div>
                <form id="search-form" action="/products/search" method="POST">
                    <div class="row g-3">
                        <div class="col-lg-6">
                            <input type="text" class="form-control form-control-lg form-control-clean" name="query" placeholder="e.g., Jordan 1 Retro High OG" required>
                        </div>
                        <div class="col-lg-2">
                            <select class="form-select form-select-lg form-control-clean" name="brand">
                                <option value="">Any Brand</option>
                                <option>Nike</option>
                                <option>Jordan</option>
                                <option>adidas</option>
                                <option>New Balance</option>
                                <option>Puma</option>
                            </select>
                        </div>
                        <div class="col-lg-2">
                            <select class="form-select form-select-lg form-control-clean" name="gender">
                                <option value="">Any Gender</option>
                                <option>men</option>
                                <option>women</option>
                                <option>child</option>
                                <option>unisex</option>
                            </select>
                        </div>
                        <div class="col-lg-2 d-grid">
                            <button class="btn btn-primary btn-lg" type="submit" id="search-button">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <form action="/products/import-multiple" method="POST" id="multi-import-form">
            <div id="results-container" class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4 mt-1">
                <% if (apiProducts && apiProducts.length > 0) { %>
                    <% apiProducts.forEach(product => { %>
                        <div class="col">
                            <div class="card h-100 product-import-card">
                                <input type="checkbox" name="selectedProducts" class="product-checkbox" value='<%- JSON.stringify(product) %>'>
                                <img src="<%= product.image.thumbnail %>" class="card-img-top p-3" alt="<%= product.name %>" style="object-fit: contain; height: 200px;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title small fw-semibold"><%= product.name %></h5>
                                    <p class="card-text text-body-secondary small mt-auto"><%= product.brand %> | SKU: <%= product.sku %></p>
                                    <h6 class="card-subtitle mt-2 fw-bold">$<%= product.retailPrice %></h6>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12 mt-4">
                        <div class="text-center p-5 dashboard-card">
                            <p class="h4 text-body-secondary">No API results to show. Try a new search.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </form>
    </div>
</div>

<div class="floating-action-bar" id="import-action-bar">
    <div class="container d-flex justify-content-between align-items-center">
        <h2 class="h5 mb-0 text-white">
            <span id="selected-import-count">0</span> Products Selected
        </h2>
        <button type="submit" form="multi-import-form" class="btn btn-light btn-lg">
            <i class="bi bi-download"></i> Import Selected
        </button>
    </div>
</div>

<div class="floating-action-bar" id="delete-action-bar">
    <div class="container d-flex justify-content-between align-items-center">
        <h2 class="h5 mb-0 text-white">
            <span id="selected-delete-count">0</span> Products Selected
        </h2>
        <button type="submit" form="inventory-delete-form" class="btn btn-danger btn-lg">
            <i class="bi bi-trash"></i> Delete Selected
        </button>
    </div>
</div>