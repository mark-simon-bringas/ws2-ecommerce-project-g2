<div class="settings-page-wrapper">
    <div class="d-flex align-items-center mb-4">
        <a href="javascript:history.back()" class="btn btn-icon btn-light rounded-circle me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 fw-bold mb-0">Wishlist</h1>
            <p class="text-body-secondary small mb-0">Your saved drops</p>
        </div>
    </div>

    <% if (products && products.length > 0) { %>
        <div class="row g-3">
            <% products.forEach(product => { %>
                <div class="col-6">
                    <!-- Clickable Card Logic -->
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 product-card-settings" data-sku="<%= product.sku %>" style="cursor: pointer;">
                        <div class="position-relative bg-body-secondary p-3 d-flex align-items-center justify-content-center" style="aspect-ratio: 1/1;">
                            <img src="<%= product.thumbnailUrl %>" alt="<%= product.name %>" class="img-fluid" style="mix-blend-mode: multiply;">
                            
                            <div class="position-absolute top-0 end-0 p-2">
                                <form action="/account/wishlist/toggle" method="POST" class="wishlist-toggle-form d-inline">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="submit" class="btn btn-icon-sm btn-white rounded-circle shadow-sm border-0">
                                        <!-- UPDATED: Reverted heart color to default text color (black/dark) -->
                                        <i class="bi bi-heart-fill text-body"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body p-3 d-flex flex-column">
                            <h6 class="fw-bold mb-1 text-truncate" style="font-size: 0.9rem;"><%= product.name %></h6>
                            <p class="text-secondary small mb-2"><%= product.brand %></p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <!-- FIXED: Fallback for price display -->
                                <span class="fw-bold small">
                                    <%= locationData.symbol %><%= (product.convertedPrice || product.retailPrice).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                                </span>
                                <button class="btn btn-dark btn-sm rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#productModal-<%= product.sku %>">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="bi bi-heart-break text-secondary fs-1"></i>
            </div>
            <h5 class="fw-bold">Your wishlist is empty</h5>
            <p class="text-secondary mb-4 small">Save items you want to track or buy later.</p>
            <a href="/products" class="btn btn-dark rounded-pill px-4 py-2">Explore Store</a>
        </div>
    <% } %>
</div>

<% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
        <div class="modal fade quick-add-modal" id="productModal-<%= product.sku %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-4">
                    <div class="modal-header border-0 pb-0">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center pt-0">
                        <img src="<%= product.thumbnailUrl %>" alt="<%= product.name %>" class="img-fluid rounded-3 mb-3" style="max-height: 200px;">
                        <h5 class="fw-bold mb-1"><%= product.name %></h5>
                        <!-- FIXED: Fallback for modal price too -->
                        <p class="text-secondary small mb-3">
                            <%= product.brand %> â€¢ <%= locationData.symbol %><%= (product.convertedPrice || product.retailPrice).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                        </p>
                        
                        <form action="/cart/add" method="POST" id="form-add-<%= product.sku %>">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <input type="hidden" name="sku" value="<%= product.sku %>">
                            
                            <div class="mb-3 text-start">
                                <label class="form-label small fw-bold text-uppercase text-secondary">Select Size</label>
                                <div class="d-flex flex-wrap gap-2">
                                    <% ['8', '8.5', '9', '9.5', '10', '10.5', '11', '12'].forEach(size => { %>
                                        <% 
                                            const safeSizeKey = size.replace('.', '_');
                                            const isSizeAvailable = product.stock && product.stock[safeSizeKey] > 0;
                                        %>
                                        <input type="radio" class="btn-check" name="size" id="w-size-<%= product.sku %>-<%= size %>" value="<%= size %>" required <%= !isSizeAvailable ? 'disabled' : '' %>>
                                        <label class="btn btn-outline-dark rounded-3 py-1 px-2 small <%= !isSizeAvailable ? 'opacity-50 text-decoration-line-through' : '' %>" for="w-size-<%= product.sku %>-<%= size %>"><%= size %></label>
                                    <% }) %>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-dark w-100 rounded-pill py-3 fw-bold">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
<% } %>

<style>
    .settings-page-wrapper {
        max-width: 600px;
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
    .btn-icon-sm {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .btn-white {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(4px);
    }
    .product-card-settings {
        transition: transform 0.2s ease;
    }
    .product-card-settings:active {
        transform: scale(0.98);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 1. Redirect Logic for Product Cards
        document.querySelectorAll('.product-card-settings').forEach(card => {
            card.addEventListener('click', function(e) {
                // Do not redirect if clicking buttons, forms, or inputs inside the card
                if (e.target.closest('button') || e.target.closest('form') || e.target.closest('input') || e.target.closest('.modal')) {
                    return;
                }
                const sku = this.dataset.sku;
                if(sku) {
                    window.location.href = `/products/${sku}`;
                }
            });
        });

        // 2. Wishlist Toggle Logic
        document.querySelectorAll('.wishlist-toggle-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                const btn = this.querySelector('button');
                const icon = btn.querySelector('i');
                const productId = this.querySelector('input[name="productId"]').value;

                // Visual feedback: Fade out card
                const cardCol = this.closest('.col-6');
                cardCol.style.transition = 'opacity 0.3s, transform 0.3s';
                cardCol.style.opacity = '0';
                cardCol.style.transform = 'scale(0.9)';

                fetch('/account/wishlist/toggle', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId: productId })
                }).then(res => {
                    if (res.ok) {
                        // Remove card after fade out
                        setTimeout(() => cardCol.remove(), 300);
                    } else {
                        // Revert if failed
                        cardCol.style.opacity = '1';
                        cardCol.style.transform = 'scale(1)';
                    }
                });
            });
        });
    });
</script>