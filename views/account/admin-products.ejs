<div class="settings-page-wrapper" style="max-width: 1200px;">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div class="d-flex align-items-center mb-3 mb-md-0">
            <a href="/account/admin/dashboard" class="btn btn-icon btn-light rounded-circle me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 fw-bold mb-0">Products</h1>
                <p class="text-body-secondary small mb-0">Manage inventory & imports</p>
            </div>
        </div>
    </div>

    <div id="alert-section">
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4 d-flex align-items-center" role="alert">
                <i class="bi bi-check-circle-fill me-3 fs-4 text-success"></i>
                <div>
                    <strong>Success</strong><br>
                    <%= message %>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4 d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-circle-fill me-3 fs-4 text-danger"></i>
                <div>
                    <strong>Error</strong><br>
                    <%= error %>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <div id="loading-alert" class="alert alert-info rounded-4 border-0 shadow-sm mb-4 d-none align-items-center" role="alert">
            <div class="spinner-border spinner-border-sm me-3" role="status"></div>
            <div>
                <strong>Processing...</strong><br>
                <span class="small">Please wait, the page will reload automatically.</span>
            </div>
        </div>
    </div>

    <div class="mb-4 overflow-x-auto">
        <div class="nav nav-pills flex-nowrap gap-2" id="product-tabs" role="tablist">
            <button class="nav-link active rounded-pill px-4 border-0" id="inventory-tab" data-bs-toggle="tab" data-bs-target="#nav-inventory" type="button" role="tab">
                <i class="bi bi-box-seam me-2"></i>My Inventory
            </button>
            <button class="nav-link rounded-pill px-4 border-0 text-secondary bg-light" id="import-tab" data-bs-toggle="tab" data-bs-target="#nav-import" type="button" role="tab">
                <i class="bi bi-cloud-download me-2"></i>Import New
            </button>
        </div>
    </div>

    <div class="tab-content" id="nav-tabContent">
        
        <div class="tab-pane fade show active" id="nav-inventory" role="tabpanel" tabindex="0">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white border-bottom-0 p-4">
                    <form action="/products/manage" method="GET" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-search text-secondary"></i></span>
                                <input type="text" class="form-control bg-light border-0" name="q" placeholder="Search inventory..." value="<%= filters.q || '' %>">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select bg-light border-0" name="brand" onchange="this.form.submit()">
                                <option value="">All Brands</option>
                                <% const brands = [...new Set(localProducts.map(p => p.brand))]; %>
                                <% brands.sort().forEach(brand => { %>
                                    <option value="<%= brand %>" <%= (filters.brand === brand) ? 'selected' : '' %>><%= brand %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select bg-light border-0" name="sort" onchange="this.form.submit()">
                                <option value="date-desc">Newest First</option>
                                <option value="price-desc">Price: High to Low</option>
                                <option value="price-asc">Price: Low to High</option>
                                <option value="name-asc">Name: A-Z</option>
                            </select>
                        </div>
                    </form>
                </div>

                <form action="/products/delete-multiple" method="POST" id="inventory-delete-form">
                    <div class="card-body p-0">
                        <% if (localProducts && localProducts.length > 0) { %>
                            
                            <div class="table-responsive d-none d-md-block" style="max-height: 650px; overflow-y: auto;">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light" style="position: sticky; top: 0; z-index: 10;">
                                        <tr>
                                            <th class="ps-4 py-3 border-0" style="width: 50px;">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" id="select-all-inventory">
                                                </div>
                                            </th>
                                            <th class="py-3 text-secondary small text-uppercase border-0" style="min-width: 300px;">Product</th>
                                            <th class="py-3 text-secondary small text-uppercase border-0">SKU</th>
                                            <th class="py-3 text-secondary small text-uppercase border-0 text-end pe-4">Price</th>
                                            <th class="py-3 text-secondary small text-uppercase border-0">Stock</th>
                                            <th class="pe-4 py-3 text-end text-secondary small text-uppercase border-0">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% localProducts.forEach(product => { %>
                                            <tr>
                                                <td class="ps-4">
                                                    <div class="form-check">
                                                        <input class="form-check-input inventory-checkbox" type="checkbox" name="productIds" value="<%= product._id %>">
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= product.thumbnailUrl %>" alt="" class="rounded-3 me-3 border bg-white" style="width: 56px; height: 56px; object-fit: contain;">
                                                        <div class="text-truncate" style="max-width: 250px;">
                                                            <div class="fw-bold text-dark text-truncate"><%= product.name %></div>
                                                            <small class="text-body-secondary"><%= product.brand %></small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-light text-secondary border font-monospace fw-normal"><%= product.sku %></span></td>
                                                <td class="text-end pe-4 fw-bold">
                                                    <%= locationData.symbol %><%= (product.convertedPrice || product.retailPrice).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                                                </td>
                                                <td>
                                                    <% const totalStock = product.stock ? Object.values(product.stock).reduce((a, b) => a + b, 0) : 0; %>
                                                    <% if (totalStock > 0) { %>
                                                        <span class="badge bg-success-subtle text-success rounded-pill border border-success-subtle">
                                                            <i class="bi bi-check-circle-fill me-1"></i> <%= totalStock %> in stock
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger-subtle text-danger rounded-pill border border-danger-subtle">
                                                            <i class="bi bi-x-circle-fill me-1"></i> Out of stock
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td class="text-end pe-4">
                                                    <div class="d-flex justify-content-end gap-2">
                                                        <a href="/products/stock/<%= product._id %>" class="btn btn-icon-sm btn-light border rounded-circle" title="Edit">
                                                            <i class="bi bi-pencil-fill small text-secondary"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-icon-sm btn-light border rounded-circle text-danger" onclick="openDeleteModal('<%= product._id %>')" title="Delete">
                                                            <i class="bi bi-trash3-fill small"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-md-none p-3">
                                <% localProducts.forEach(product => { %>
                                    <% const totalStock = product.stock ? Object.values(product.stock).reduce((a, b) => a + b, 0) : 0; %>
                                    <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden inventory-mobile-card">
                                        <div class="card-body p-3">
                                            <div class="d-flex gap-3 align-items-start mb-3">
                                                <div class="form-check pt-1">
                                                    <input class="form-check-input inventory-checkbox" type="checkbox" name="productIds" value="<%= product._id %>">
                                                </div>
                                                <img src="<%= product.thumbnailUrl %>" alt="" class="rounded-3 border bg-white flex-shrink-0" style="width: 72px; height: 72px; object-fit: contain;">
                                                
                                                <div class="flex-grow-1" style="min-width: 0;">
                                                    <h6 class="fw-bold mb-1 text-dark" style="font-size: 0.95rem; line-height: 1.3;"><%= product.name %></h6>
                                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                                        <span class="text-secondary small"><%= product.sku %></span>
                                                        <span class="fw-bold text-dark"><%= locationData.symbol %><%= (product.convertedPrice || product.retailPrice).toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="d-flex align-items-center justify-content-between border-top pt-3">
                                                <div>
                                                    <% if (totalStock > 0) { %>
                                                        <span class="badge bg-success-subtle text-success rounded-pill border border-success-subtle">
                                                            <%= totalStock %> In Stock
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger-subtle text-danger rounded-pill border border-danger-subtle">
                                                            Out of Stock
                                                        </span>
                                                    <% } %>
                                                </div>
                                                <div class="d-flex gap-2">
                                                    <a href="/products/stock/<%= product._id %>" class="btn btn-sm btn-light border rounded-3 px-3">Edit</a>
                                                    <button type="button" class="btn btn-sm btn-light border rounded-3 text-danger px-3" onclick="openDeleteModal('<%= product._id %>')">Delete</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>

                        <% } else { %>
                            <div class="text-center p-5">
                                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                    <i class="bi bi-box text-secondary fs-4"></i>
                                </div>
                                <p class="text-secondary mb-0">No products found.</p>
                            </div>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>

        <div class="tab-pane fade" id="nav-import" role="tabpanel" tabindex="0">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-1">Search Database</h5>
                    <p class="text-secondary small mb-4">Find and import products from the global sneaker database.</p>
                    
                    <form id="search-form" class="row g-3">
                        <div class="col-lg-8">
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control bg-light border-0" name="query" placeholder="e.g., Jordan 1 Retro High" required>
                            </div>
                        </div>
                        <div class="col-lg-4 d-grid">
                            <button class="btn btn-dark rounded-pill" type="submit" id="search-button">Search</button>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="hasDescription" value="true" id="hasDesc" checked>
                                <label class="form-check-label small text-secondary" for="hasDesc">Must have description</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <form action="/products/import-multiple" method="POST" id="multi-import-form" onsubmit="return showLoadingAlert()">
                <div id="results-container" class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                    <div class="col-12 text-center py-5">
                        <p class="text-secondary">Search for products to begin importing.</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="action-bar-wrapper" id="import-action-bar">
    <div class="action-bar-content">
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-icon-sm btn-dark rounded-circle border-0" onclick="clearSelections()">
                <i class="bi bi-x"></i>
            </button>
            <span class="fw-bold text-white"><span id="selected-import-count">0</span> Selected</span>
        </div>
        <button type="submit" form="multi-import-form" class="btn btn-light rounded-pill fw-bold px-4 ms-auto">
            Import
        </button>
    </div>
</div>

<div class="action-bar-wrapper delete-mode" id="delete-action-bar">
    <div class="action-bar-content">
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-icon-sm btn-light text-dark rounded-circle border-0" onclick="clearSelections()">
                <i class="bi bi-x"></i>
            </button>
            <span class="fw-bold text-white"><span id="selected-delete-count">0</span> Selected</span>
        </div>
        <button type="button" onclick="confirmDeleteMultiple()" class="btn btn-light text-danger rounded-pill fw-bold px-4 ms-auto">
            Delete
        </button>
    </div>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" style="max-width: 400px;">
    <div class="modal-content rounded-4 border-0 shadow">
      <div class="modal-body p-4 text-center">
        <div class="mb-4">
            <div class="bg-danger-subtle text-danger rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                <i class="bi bi-trash3-fill fs-2"></i>
            </div>
        </div>
        <h5 class="fw-bold mb-2">Confirm Deletion</h5>
        <p class="text-secondary small mb-4">Are you sure you want to remove this item? This action cannot be undone.</p>
        <div class="d-grid gap-2">
            <button type="button" id="confirmDeleteBtn" class="btn btn-danger rounded-pill py-2 fw-bold">Yes, Delete Item</button>
            <button type="button" class="btn btn-light rounded-pill py-2 fw-bold" data-bs-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>

<form id="single-delete-form" action="/products/delete" method="POST" class="d-none">
    <input type="hidden" name="productId" id="delete-product-id">
</form>

<style>
    .settings-page-wrapper { margin: 0 auto; padding: 1rem; }
    .btn-icon { width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; border: 1px solid var(--border-color); }
    .btn-icon-sm { width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; padding: 0; }
    
    .nav-pills .nav-link { color: var(--text-color); font-weight: 500; transition: all 0.2s; }
    .nav-pills .nav-link.active { background-color: var(--nike-black); color: #fff; }

    /* Floating Action Bar */
    .action-bar-wrapper {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%) translateY(200%); /* Start hidden */
        z-index: 1200;
        width: auto;
        min-width: 400px;
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), opacity 0.3s ease;
        opacity: 0;
        pointer-events: none;
    }
    
    .action-bar-wrapper.is-active {
        transform: translateX(-50%) translateY(0);
        opacity: 1;
        pointer-events: auto;
    }

    .action-bar-content {
        background: rgba(20, 20, 20, 0.95);
        backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px);
        border-radius: 50px;
        /* Increased vertical padding for taller look */
        padding: 16px 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: white;
        min-height: 70px;
    }

    .action-bar-wrapper.delete-mode .action-bar-content {
        background: #dc3545;
    }

    /* Mobile Overrides */
    @media (max-width: 991.98px) {
        .action-bar-wrapper {
            left: 0;
            bottom: 0;
            width: 100%;
            min-width: 100%;
            transform: translateY(100%);
            border-radius: 0;
        }
        .action-bar-wrapper.is-active {
            transform: translateY(0);
        }
        .action-bar-content {
            border-radius: 24px 24px 0 0;
            padding: 24px 24px calc(24px + env(safe-area-inset-bottom)) 24px;
            min-height: auto;
        }
        .inventory-mobile-card:last-child { margin-bottom: 100px !important; }
    }
</style>

<script>
    // --- Global Variables ---
    let deleteModal;
    let pendingDeleteType = null; 
    let pendingDeleteId = null;

    // --- Alert Functions ---
    function showLoadingAlert() {
        const alert = document.getElementById('loading-alert');
        if(alert) {
            alert.classList.remove('d-none');
            alert.classList.add('d-flex');
        }
        // Hide bars immediately
        document.getElementById('delete-action-bar').classList.remove('is-active');
        document.getElementById('import-action-bar').classList.remove('is-active');
        
        window.scrollTo({ top: 0, behavior: 'smooth' });
        return true; 
    }
    
    // --- Auto-Close Success/Error Alerts ---
    setTimeout(() => {
        document.querySelectorAll('.alert-dismissible').forEach(alert => {
            // Use Bootstrap's alert instance to close nicely
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000); // 5 seconds

    // --- Main Init ---
    document.addEventListener('DOMContentLoaded', function() {
        // Init Modal
        const modalEl = document.getElementById('deleteConfirmModal');
        if(modalEl) deleteModal = new bootstrap.Modal(modalEl);

        const confirmBtn = document.getElementById('confirmDeleteBtn');
        if(confirmBtn) {
            confirmBtn.addEventListener('click', function() {
                if(deleteModal) deleteModal.hide();
                showLoadingAlert();
                
                if (pendingDeleteType === 'single') {
                    document.getElementById('delete-product-id').value = pendingDeleteId;
                    document.getElementById('single-delete-form').submit();
                } else if (pendingDeleteType === 'multiple') {
                    document.getElementById('inventory-delete-form').submit();
                }
            });
        }

        // --- Selection Logic ---
        const selectAll = document.getElementById('select-all-inventory');
        const checkboxes = document.querySelectorAll('.inventory-checkbox');
        const deleteBar = document.getElementById('delete-action-bar');
        const countSpan = document.getElementById('selected-delete-count');
        const importBar = document.getElementById('import-action-bar');
        const resultsContainer = document.getElementById('results-container');

        function updateDeleteState() {
            const checkedCount = document.querySelectorAll('.inventory-checkbox:checked').length;
            if(countSpan) countSpan.innerText = checkedCount;
            
            if(deleteBar) {
                if (checkedCount > 0) deleteBar.classList.add('is-active');
                else deleteBar.classList.remove('is-active');
            }
        }

        // Inventory Listeners
        if (selectAll) {
            selectAll.addEventListener('change', function() {
                checkboxes.forEach(cb => cb.checked = this.checked);
                updateDeleteState();
            });
        }
        checkboxes.forEach(cb => cb.addEventListener('change', updateDeleteState));

        // Import Tab Logic
        if(resultsContainer) {
            const impCountSpan = document.getElementById('selected-import-count');
            
            resultsContainer.addEventListener('change', function(e) {
                if(e.target.classList.contains('product-checkbox')) {
                    const count = resultsContainer.querySelectorAll('.product-checkbox:checked').length;
                    if(impCountSpan) impCountSpan.innerText = count;
                    
                    if(importBar) {
                        if(count > 0) importBar.classList.add('is-active');
                        else importBar.classList.remove('is-active');
                    }
                    
                    const card = e.target.closest('.product-import-card');
                    if(card) card.classList.toggle('is-selected', e.target.checked);
                }
            });
        }

        // --- Global Clear Function ---
        window.clearSelections = function() {
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
            updateDeleteState(); 
            
            if(importBar) importBar.classList.remove('is-active');
            const importCount = document.getElementById('selected-import-count');
            if(importCount) importCount.innerText = '0';
            
            document.querySelectorAll('.product-import-card.is-selected').forEach(c => c.classList.remove('is-selected'));
        }

        // Reset on Tab Switch
        const tabs = document.querySelectorAll('#product-tabs button');
        tabs.forEach(tab => {
            tab.addEventListener('click', function () {
                window.clearSelections();
            })
        });
    });

    // --- Trigger Functions ---
    window.openDeleteModal = function(id) {
        pendingDeleteType = 'single';
        pendingDeleteId = id;
        if(deleteModal) deleteModal.show();
    }

    window.confirmDeleteMultiple = function() {
        pendingDeleteType = 'multiple';
        if(deleteModal) deleteModal.show();
    }
</script>