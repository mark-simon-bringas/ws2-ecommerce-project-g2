<div class="settings-page-wrapper" style="max-width: 1000px;">
    <div class="d-flex align-items-center mb-4">
        <a href="/account/settings" class="btn btn-icon btn-light rounded-circle me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 fw-bold mb-0">User Details</h1>
            <p class="text-body-secondary small mb-0">View customer information</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100">
                <div class="profile-avatar-lg rounded-circle bg-body-secondary d-inline-flex align-items-center justify-content-center mb-3 position-relative overflow-hidden" style="width: 100px; height: 100px; font-size: 2.5rem; margin: 0 auto;">
                    <% if (userDetails.profilePictureUrl) { %>
                        <img src="<%= userDetails.profilePictureUrl %>" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                    <% } else { %>
                        <%= userDetails.firstName ? userDetails.firstName.charAt(0).toUpperCase() : 'U' %>
                    <% } %>
                </div>
                <h5 class="fw-bold mb-1"><%= userDetails.firstName %> <%= userDetails.lastName %></h5>
                <p class="text-secondary small mb-2"><%= userDetails.email %></p>
                <div>
                    <% if (userDetails.role === 'admin') { %>
                        <span class="badge bg-dark">Admin</span>
                    <% } else { %>
                        <span class="badge bg-light text-dark border">Customer</span>
                    <% } %>
                </div>
                <hr class="my-4">
                <div class="text-start">
                    <p class="small mb-2"><strong>User ID:</strong> <span class="text-secondary font-monospace"><%= userDetails.userId %></span></p>
                    <p class="small mb-2"><strong>Joined:</strong> <span class="text-secondary"><%= new Date(userDetails.createdAt).toLocaleDateString() %></span></p>
                    <p class="small mb-0"><strong>Status:</strong> 
                        <% if (userDetails.accountStatus === 'active') { %>
                            <span class="text-success fw-bold">Active</span>
                        <% } else { %>
                            <span class="text-danger fw-bold"><%= userDetails.accountStatus %></span>
                        <% } %>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-header bg-white border-bottom-0 p-0">
                    <ul class="nav nav-tabs nav-fill" id="userTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active py-3 border-0 border-bottom" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">Orders (<%= orders.length %>)</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link py-3 border-0 border-bottom" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab">Tickets (<%= tickets.length %>)</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-0">
                    <div class="tab-content" id="userTabContent">
                        <div class="tab-pane fade show active" id="orders" role="tabpanel">
                            <% if (orders && orders.length > 0) { %>
                                <div class="list-group list-group-flush">
                                    <% orders.forEach(order => { %>
                                        <a href="/account/admin/orders/<%= order._id %>" class="list-group-item list-group-item-action p-3 border-0 border-bottom">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <span class="fw-bold text-dark">#<%= order._id.toString().slice(-6).toUpperCase() %></span>
                                                <% if (order.status === 'Processing') { %>
                                                    <span class="badge bg-info-subtle text-info-emphasis rounded-pill"><%= order.status %></span>
                                                <% } else if (order.status === 'Shipped') { %>
                                                    <span class="badge bg-primary-subtle text-primary-emphasis rounded-pill"><%= order.status %></span>
                                                <% } else if (order.status === 'Delivered') { %>
                                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill"><%= order.status %></span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill"><%= order.status %></span>
                                                <% } %>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-secondary"><%= new Date(order.orderDate).toLocaleDateString() %></small>
                                                <span class="fw-medium"><%= locationData.symbol %><%= order.total.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
                                            </div>
                                        </a>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="text-center p-5">
                                    <p class="text-secondary mb-0">No orders found.</p>
                                </div>
                            <% } %>
                        </div>

                        <div class="tab-pane fade" id="tickets" role="tabpanel">
                            <% if (tickets && tickets.length > 0) { %>
                                <div class="list-group list-group-flush">
                                    <% tickets.forEach(ticket => { %>
                                        <a href="/account/admin/tickets/<%= ticket.ticketId %>" class="list-group-item list-group-item-action p-3 border-0 border-bottom">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <span class="fw-bold text-dark text-truncate" style="max-width: 200px;"><%= ticket.subject %></span>
                                                <% if (ticket.status === 'Open') { %>
                                                    <span class="badge bg-primary-subtle text-primary-emphasis">Open</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary-subtle text-secondary">Closed</span>
                                                <% } %>
                                            </div>
                                            <small class="text-secondary">ID: <%= ticket.ticketId %> &bull; <%= new Date(ticket.createdAt).toLocaleDateString() %></small>
                                        </a>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="text-center p-5">
                                    <p class="text-secondary mb-0">No support tickets found.</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
</style>