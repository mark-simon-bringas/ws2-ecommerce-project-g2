<div class="settings-page-wrapper" style="max-width: 800px;">
    <div class="d-flex align-items-center mb-4">
        <a href="/account/settings" class="btn btn-icon btn-light rounded-circle me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
        <div>
            <h1 class="h3 fw-bold mb-0">Login & Security</h1>
            <p class="text-body-secondary small mb-0">Manage your password and account access</p>
        </div>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-success-subtle overflow-hidden">
        <div class="card-body p-4 d-flex align-items-center gap-3">
             <div class="bg-white text-success rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 shadow-sm" style="width: 48px; height: 48px;">
                <i class="bi bi-shield-check fs-4"></i>
            </div>
            <div>
                <h6 class="fw-bold text-success-emphasis mb-1">Account Protected</h6>
                <p class="small text-success-emphasis mb-0 opacity-75">Your account is secured with password authentication. <% if (user && user.role === 'admin') { %>You have admin privileges.<% } %></p>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h6 class="fw-bold mb-1"><i class="bi bi-phone me-2 text-secondary"></i> Two-Factor Authentication</h6>
                    <p class="text-secondary small mb-0">Add an extra layer of security by requiring a code from your authenticator app.</p>
                </div>
                <% if (user && user.is2FAEnabled) { %>
                    <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2">Enabled</span>
                <% } else { %>
                    <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3 py-2">Disabled</span>
                <% } %>
            </div>

            <% if (user && user.is2FAEnabled) { %>
                <form action="/account/security/2fa/disable" method="POST">
                    <button type="submit" class="btn btn-outline-danger w-100 rounded-pill fw-bold" onclick="return confirm('Are you sure you want to disable 2FA? Your account will be less secure.')">
                        Disable 2FA
                    </button>
                </form>
            <% } else { %>
                <button type="button" class="btn btn-dark w-100 rounded-pill fw-bold" onclick="start2FASetup()">
                    Enable 2FA
                </button>
            <% } %>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom p-4">
            <h5 class="fw-bold mb-0">Recent Devices</h5>
        </div>
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                <% if (loginHistory && loginHistory.length > 0) { %>
                    <% loginHistory.forEach((login, index) => { %>
                        <div class="list-group-item p-4 d-flex align-items-center justify-content-between border-0 <%= index !== loginHistory.length - 1 ? 'border-bottom' : '' %>">
                            <div class="d-flex align-items-center gap-3">
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                    <i class="bi <%= login.icon %> text-secondary"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-0"><%= login.displayName %></h6>
                                    <% if (index === 0) { %>
                                        <small class="text-success d-flex align-items-center gap-1"><i class="bi bi-circle-fill" style="font-size: 6px;"></i> Current Session</small>
                                    <% } else { %>
                                        <small class="text-secondary"><%= login.ip %></small>
                                     <% } %>
                                </div>
                            </div>
                            <small class="text-secondary text-end"><%= new Date(login.timestamp).toLocaleDateString() %> <br> <%= new Date(login.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="p-4 text-center text-secondary">
                        <p class="mb-0">No login history available yet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom p-4">
            <h5 class="fw-bold mb-0">Change Password</h5>
        </div>
        <div class="card-body p-4">
            <form action="/account/settings/update-password" method="POST">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label small fw-bold text-uppercase text-secondary">Current Password</label>
                    <div class="position-relative">
                        <input type="password" class="form-control bg-light border-0 p-3 pe-5" id="currentPassword" name="currentPassword" placeholder="Enter current password" required>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="newPassword" class="form-label small fw-bold text-uppercase text-secondary">New Password</label>
                        <input type="password" class="form-control bg-light border-0 p-3" id="newPassword" name="newPassword" placeholder="At least 8 characters" required>
                    </div>
                    <div class="col-md-6">
                        <label for="confirmPassword" class="form-label small fw-bold text-uppercase text-secondary">Confirm Password</label>
                        <input type="password" class="form-control bg-light border-0 p-3" id="confirmPassword" name="confirmPassword" placeholder="Re-enter new password" required>
                    </div>
                </div>

                <div class="bg-light rounded-3 p-3 mb-4">
                    <h6 class="small fw-bold text-dark mb-2">Password Requirements</h6>
                    <div class="d-flex flex-wrap gap-3">
                        <small class="text-secondary"><i class="bi bi-dot"></i> 8+ Characters</small>
                        <small class="text-secondary"><i class="bi bi-dot"></i> Uppercase & Lowercase</small>
                        <small class="text-secondary"><i class="bi bi-dot"></i> 1+ Number</small>
                        <small class="text-secondary"><i class="bi bi-dot"></i> 1+ Special Character</small>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark rounded-pill px-4 py-2 fw-bold">Update Password</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center pt-4 border-top">
        <p class="text-secondary small mb-3">Want to disable your account?</p>
        <button class="btn btn-link text-danger text-decoration-none fw-medium small p-0" onclick="alert('Please contact support to delete your account.')">
            Delete Account
        </button>
    </div>
</div>

<div class="modal fade" id="setup2FAModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Set up 2FA</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-4">
                    <p class="text-secondary small mb-3">Scan this QR code with your authenticator app (Google Authenticator, Authy, etc.).</p>
                    <div class="bg-white p-2 rounded-3 border d-inline-block shadow-sm">
                        <img id="qrCodeImage" src="" alt="QR Code" style="width: 200px; height: 200px;">
                    </div>
                    <p class="text-body-tertiary small mt-2">Or enter code manually: <strong id="secretCodeText" class="text-dark font-monospace"></strong></p>
                </div>
                
                <div class="text-start">
                    <label class="form-label small fw-bold text-secondary">Enter 6-digit Code</label>
                    <input type="text" id="verifyToken" class="form-control bg-light border-0 text-center fs-4 letter-spacing-2" maxlength="6" placeholder="000000">
                    <div id="verifyError" class="text-danger small mt-2 d-none"><i class="bi bi-exclamation-circle"></i> Invalid code</div>
                </div>
                
                <div class="d-grid mt-4">
                    <button type="button" class="btn btn-primary rounded-pill fw-bold" onclick="verify2FA()">Verify & Enable</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
    .letter-spacing-2 { letter-spacing: 4px; }
</style>

<script>
    // Define the variable globally, but don't initialize it yet
    let setupModalInstance = null;

    // Helper function to get or create the modal instance safely
    function getSetupModal() {
        if (!setupModalInstance) {
            const modalEl = document.getElementById('setup2FAModal');
            if (modalEl) {
                setupModalInstance = new bootstrap.Modal(modalEl);
            }
        }
        return setupModalInstance;
    }

    function start2FASetup() {
        const modal = getSetupModal();
        if (!modal) {
            console.error("2FA Modal element not found");
            return;
        }

        // Fetch QR Code
        fetch('/account/security/2fa/setup', { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if(data.success) {
                    const img = document.getElementById('qrCodeImage');
                    const text = document.getElementById('secretCodeText');
                    
                    if(img) img.src = data.qrCode;
                    if(text) text.textContent = data.secret;
                    
                    modal.show();
                } else {
                    alert('Error initializing 2FA setup: ' + (data.message || 'Unknown error'));
                }
            })
            .catch(err => {
                console.error(err);
                alert('Network error initializing 2FA.');
            });
    }

    function verify2FA() {
        const tokenInput = document.getElementById('verifyToken');
        const errorDiv = document.getElementById('verifyError');
        
        if (!tokenInput) return;

        fetch('/account/security/2fa/verify', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ token: tokenInput.value })
        })
        .then(res => res.json())
        .then(data => {
            if(data.success) {
                window.location.reload(); // Reload to show enabled state
            } else {
                if (errorDiv) {
                    errorDiv.textContent = data.message || "Invalid code";
                    errorDiv.classList.remove('d-none');
                }
            }
        })
        .catch(err => console.error(err));
    }
</script>