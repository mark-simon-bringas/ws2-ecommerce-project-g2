<div class="settings-page-wrapper" style="max-width: 800px; margin: 0 auto;">
    <div class="d-flex align-items-center mb-4">
        <a href="/account/settings" class="btn btn-icon btn-light rounded-circle me-3 border d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 fw-bold mb-0">Login & Security</h1>
            <p class="text-body-secondary small mb-0">Manage your password and account access</p>
        </div>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-success-subtle overflow-hidden">
        <div class="card-body p-4 d-flex align-items-center gap-3">
             <div class="bg-white text-success rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 shadow-sm" style="width: 48px; height: 48px;">
                <i class="bi bi-shield-check fs-4"></i>
            </div>
            <div>
                <h6 class="fw-bold text-success-emphasis mb-1">Account Protected</h6>
                <p class="small text-success-emphasis mb-0 opacity-75">Your account is secured with password authentication. <% if (user && user.role === 'admin') { %>You have admin privileges.<% } %></p>
            </div>
        </div>
    </div>

    <% if (user && user.is2FAEnabled) { %>
        <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden" style="background: linear-gradient(145deg, #1a1a1a, #000); color: white;">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4 gap-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="rounded-circle bg-white text-dark d-flex align-items-center justify-content-center flex-shrink-0" style="width: 42px; height: 42px;">
                            <i class="bi bi-shield-lock-fill fs-5"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-white">Sneakslab Authenticator</h6>
                            <small class="text-white-50">Use this device to log in elsewhere</small>
                        </div>
                    </div>
                    <% if (typeof isCurrentDeviceTrusted !== 'undefined' && isCurrentDeviceTrusted) { %>
                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3 ms-auto ms-sm-0"><i class="bi bi-check2 me-1"></i> Trusted</span>
                    <% } else { %>
                        <span class="badge bg-warning-subtle text-warning border border-warning-subtle rounded-pill px-3 ms-auto ms-sm-0"><i class="bi bi-exclamation-triangle me-1"></i> Untrusted</span>
                    <% } %>
                </div>

                <% if (typeof isCurrentDeviceTrusted !== 'undefined' && isCurrentDeviceTrusted) { %>
                    <div id="authenticator-display" class="d-none text-center py-3">
                        <div class="display-1 fw-bold letter-spacing-4 mb-3" id="auth-code">------</div>
                        <div class="progress bg-white bg-opacity-25" style="height: 4px; border-radius: 2px;">
                            <div class="progress-bar bg-white" id="auth-progress" role="progressbar" style="width: 100%"></div>
                        </div>
                        <p class="text-white-50 small mt-2 mb-0">Code refreshes in <span id="auth-timer">30</span>s</p>
                    </div>

                    <button id="btn-show-code" class="btn btn-light w-100 rounded-pill fw-bold py-2" onclick="showAuthCode()">
                        <i class="bi bi-eye me-2"></i> Reveal Login Code
                    </button>
                <% } else { %>
                    <div class="alert alert-dark border-secondary text-dark-50 mb-0 small">
                        <i class="bi bi-lock me-2"></i> To use this feature, you must trust this device during login.
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start mb-3 gap-3">
                <div>
                    <h6 class="fw-bold mb-1">Two-Factor Authentication</h6>
                    <p class="text-secondary small mb-0">Secure your account with an authenticator app.</p>
                </div>
                <% if (user && user.is2FAEnabled) { %>
                    <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2 ms-auto ms-sm-0">Enabled</span>
                <% } else { %>
                    <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3 py-2 ms-auto ms-sm-0">Disabled</span>
                <% } %>
            </div>

            <% if (user && user.is2FAEnabled) { %>
                <form action="/account/security/2fa/disable" method="POST">
                    <button type="submit" class="btn btn-outline-danger w-100 rounded-pill fw-bold" onclick="return confirm('Are you sure you want to disable 2FA? Your account will be less secure.')">
                        Disable 2FA
                    </button>
                </form>
            <% } else { %>
                <button type="button" class="btn btn-dark w-100 rounded-pill fw-bold" onclick="start2FASetup()">
                    Enable 2FA
                </button>
            <% } %>
        </div>
    </div>

    <% if (user && user.is2FAEnabled && (typeof isCurrentDeviceTrusted !== 'undefined' && !isCurrentDeviceTrusted)) { %>
        <div class="card border-0 shadow-sm rounded-4 mb-4 bg-light">
            <div class="card-body p-4 d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <h6 class="fw-bold mb-1">Trust this device?</h6>
                    <p class="text-secondary small mb-0">Skip 2FA codes when logging in from this browser.</p>
                </div>
                <form action="/account/security/trust-device" method="POST" class="w-100 w-sm-auto">
                    <button type="submit" class="btn btn-dark rounded-pill fw-bold px-4 w-100 w-sm-auto">Trust</button>
                </form>
            </div>
        </div>
    <% } %>

    <% if (user && user.is2FAEnabled) { %>
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0 d-flex justify-content-between align-items-end">
            <div>
                <h6 class="fw-bold mb-1">Trusted Devices</h6>
                <p class="text-secondary small mb-0 opacity-75">Devices that can generate keys.</p>
            </div>
            <% if (typeof trustedDevices !== 'undefined' && trustedDevices && trustedDevices.length > 0) { %>
                <form action="/account/security/revoke-devices" method="POST" onsubmit="return confirm('Revoke ALL devices? You will need to re-authenticate everywhere.');">
                    <button type="submit" class="btn btn-danger btn-sm rounded-pill px-3 fw-bold" style="font-size: 0.75rem;">
                        Revoke All
                    </button>
                </form>
            <% } %>
        </div>
        <div class="card-body p-0 mt-3">
            <% if (typeof trustedDevices !== 'undefined' && trustedDevices && trustedDevices.length > 0) { %>
                <ul class="list-group list-group-flush">
                    <% trustedDevices.forEach(device => { %>
                        <li class="list-group-item px-4 py-3 border-0 border-bottom d-flex align-items-center justify-content-between transition-hover">
                            <div class="d-flex align-items-center gap-3 overflow-hidden">
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center text-secondary flex-shrink-0" style="width: 48px; height: 48px;">
                                    <i class="bi <%= device.icon %> fs-5"></i>
                                </div>
                                <div class="min-w-0">
                                    <div class="fw-bold text-dark small d-flex align-items-center gap-2 flex-wrap">
                                        <span class="text-truncate"><%= device.displayName %></span>
                                        <% if (device.isCurrent) { %>
                                            <span class="badge bg-success-subtle text-success border border-success-subtle flex-shrink-0" style="font-size: 0.65rem;">Current</span>
                                        <% } %>
                                    </div>
                                    <div class="text-secondary small text-truncate" style="font-size: 0.75rem;">
                                        <span class="d-none d-sm-inline">Added: </span><%= new Date(device.addedAt).toLocaleDateString() %>
                                    </div>
                                </div>
                            </div>
                            <form action="/account/security/revoke-device" method="POST" class="ms-3" onsubmit="return confirm('Revoke access for this device?');">
                                <input type="hidden" name="token" value="<%= device.token %>">
                                <button type="submit" class="btn btn-light text-danger border-0 rounded-circle d-flex align-items-center justify-content-center btn-hover-danger" title="Revoke Access" style="width: 36px; height: 36px;">
                                    <i class="bi bi-trash3-fill"></i>
                                </button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <div class="p-5 text-center text-secondary">
                    <i class="bi bi-shield-x fs-1 mb-2 opacity-25"></i>
                    <p class="mb-0 small">No trusted devices yet.</p>
                </div>
            <% } %>
        </div>
    </div>
    <% } %>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom p-4">
            <h5 class="fw-bold mb-0">Recent Activity</h5>
        </div>
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                <% if (typeof loginHistory !== 'undefined' && loginHistory && loginHistory.length > 0) { %>
                    <% loginHistory.forEach((login, index) => { %>
                        <div class="list-group-item p-4 d-flex flex-wrap flex-sm-nowrap align-items-center justify-content-between border-0 <%= index !== loginHistory.length - 1 ? 'border-bottom' : '' %> gap-3">
                            <div class="d-flex align-items-center gap-3 overflow-hidden">
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 40px; height: 40px;">
                                    <i class="bi <%= login.icon %> text-secondary"></i>
                                </div>
                                <div class="min-w-0">
                                    <h6 class="fw-semibold mb-0 text-truncate"><%= login.displayName %></h6>
                                    <% if (index === 0) { %>
                                        <small class="text-success d-flex align-items-center gap-1"><i class="bi bi-circle-fill" style="font-size: 6px;"></i> Current Session</small>
                                    <% } else { %>
                                        <small class="text-secondary text-truncate d-block"><%= login.ip %></small>
                                     <% } %>
                                </div>
                            </div>
                            <small class="text-secondary text-start text-sm-end w-100 w-sm-auto ps-5 ps-sm-0">
                                <%= new Date(login.timestamp).toLocaleDateString() %> <span class="d-none d-sm-inline"><br></span> 
                                <span class="d-inline d-sm-block"><%= new Date(login.timestamp).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                            </small>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="p-4 text-center text-secondary">
                        <p class="mb-0">No login history available yet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-bottom p-4">
            <h5 class="fw-bold mb-0">Change Password</h5>
        </div>
        <div class="card-body p-4">
            <form action="/account/settings/update-password" method="POST">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label small fw-bold text-uppercase text-secondary">Current Password</label>
                    <div class="position-relative">
                        <input type="password" class="form-control bg-light border-0 p-3 pe-5" id="currentPassword" name="currentPassword" placeholder="Enter current password" required>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-12 col-md-6">
                        <label for="newPassword" class="form-label small fw-bold text-uppercase text-secondary">New Password</label>
                        <input type="password" class="form-control bg-light border-0 p-3" id="newPassword" name="newPassword" placeholder="At least 8 characters" required>
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="confirmPassword" class="form-label small fw-bold text-uppercase text-secondary">Confirm Password</label>
                        <input type="password" class="form-control bg-light border-0 p-3" id="confirmPassword" name="confirmPassword" placeholder="Re-enter new password" required>
                    </div>
                </div>

                <div class="bg-light rounded-3 p-3 mb-4">
                    <h6 class="small fw-bold text-dark mb-2">Password Requirements</h6>
                    <div class="d-flex flex-wrap gap-2 gap-md-3">
                        <small class="text-secondary"><i class="bi bi-dot"></i> 8+ Characters</small>
                        <small class="text-secondary"><i class="bi bi-dot"></i> Uppercase & Lowercase</small>
                        <small class="text-secondary"><i class="bi bi-dot"></i> 1+ Number</small>
                        <small class="text-secondary"><i class="bi bi-dot"></i> 1+ Special Character</small>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark rounded-pill px-4 py-2 fw-bold w-100 w-sm-auto">Update Password</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center pt-4 border-top">
        <p class="text-secondary small mb-3">Want to disable your account?</p>
        <button class="btn btn-link text-danger text-decoration-none fw-medium small p-0" onclick="alert('Please contact support to delete your account.')">
            Delete Account
        </button>
    </div>
</div>

<div class="modal fade" id="setup2FAModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Set up 2FA</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 text-center">
                
                <div class="mb-4">
                    <p class="text-secondary small mb-3">Scan this QR code with Google Authenticator or Authy.</p>
                    <div class="bg-white p-2 rounded-3 border d-inline-block shadow-sm mb-3">
                        <img id="qrCodeImage" src="" alt="QR Code" style="width: 180px; height: 180px;">
                    </div>

                </div>

                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="flex-grow-1 border-top"></div>
                    <span class="text-secondary small fw-bold">OR</span>
                    <div class="flex-grow-1 border-top"></div>
                </div>

                <div class="mb-4">
                    <button type="button" class="btn btn-outline-dark rounded-pill w-100 fw-bold" onclick="autoVerifyOnThisDevice()">
                        <i class="bi bi-laptop me-2"></i> Use this device as Authenticator
                    </button>
                    <p class="text-secondary small mt-2 fst-italic">We'll set up and trust this browser automatically.</p>
                </div>
                
                <div class="text-start bg-light p-3 rounded-3">
                    <label class="form-label small fw-bold text-secondary">Verify Code</label>
                    <div class="d-flex gap-2">
                        <input type="text" id="verifyToken" class="form-control border-0 bg-white text-center fs-5 letter-spacing-2" maxlength="6" placeholder="000000">
                        <button type="button" class="btn btn-primary rounded-3 fw-bold" onclick="verify2FA(false)">Verify</button>
                    </div>
                    <div id="verifyError" class="text-danger small mt-2 d-none"><i class="bi bi-exclamation-circle"></i> Invalid code</div>
                </div>
                
            </div>
        </div>
    </div>
</div>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .letter-spacing-4 { letter-spacing: 0.5rem; }
    .letter-spacing-2 { letter-spacing: 4px; }
    
    /* Button Hover Effect for Revoke */
    .btn-hover-danger:hover {
        background-color: #dc3545 !important; /* Bootstrap Danger Red */
        color: white !important;
    }
    .transition-hover {
        transition: background-color 0.2s ease;
    }
    .transition-hover:hover {
        background-color: #f8f9fa;
    }

    /* Helper for mobile w-100 behavior on sm only */
    @media (max-width: 576px) {
        .w-sm-auto { width: 100% !important; }
    }
    @media (min-width: 576px) {
        .w-sm-auto { width: auto !important; }
        .ms-sm-0 { margin-left: 0 !important; }
    }
</style>

<script>
    // Safe Modal Initialization
    let setupModalInstance = null;
    let authInterval;

    function getSetupModal() {
        if (!setupModalInstance) {
            const modalEl = document.getElementById('setup2FAModal');
            if (modalEl) {
                setupModalInstance = new bootstrap.Modal(modalEl);
            }
        }
        return setupModalInstance;
    }

    // --- SETUP LOGIC ---
    function start2FASetup() {
        const modal = getSetupModal();
        if (!modal) {
            console.error("2FA Modal element not found");
            return;
        }

        fetch('/account/security/2fa/setup', { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if(data.success) {
                    const img = document.getElementById('qrCodeImage');
                    const text = document.getElementById('secretCodeText');
                    
                    if(img) img.src = data.qrCode;
                    if(text) text.textContent = data.secret;
                    
                    modal.show();
                } else {
                    alert('Error initializing 2FA setup.');
                }
            });
    }

    function autoVerifyOnThisDevice() {
        fetch('/account/security/2fa/temp-token', { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if(data.success) {
                    document.getElementById('verifyToken').value = data.token;
                    verify2FA(true);
                } else {
                    alert('Could not generate token. Please verify manually.');
                }
            });
    }

    function verify2FA(trustThisDevice = false) {
        const tokenInput = document.getElementById('verifyToken');
        const errorDiv = document.getElementById('verifyError');
        
        if (!tokenInput || !tokenInput.value) return;

        fetch('/account/security/2fa/verify', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ token: tokenInput.value, trustDevice: trustThisDevice })
        })
        .then(res => res.json())
        .then(data => {
            if(data.success) {
                window.location.reload(); 
            } else {
                if (errorDiv) {
                    errorDiv.textContent = data.message || "Invalid code";
                    errorDiv.classList.remove('d-none');
                }
            }
        })
        .catch(err => console.error(err));
    }

    // --- BUILT-IN AUTHENTICATOR LOGIC ---
    function showAuthCode() {
        const display = document.getElementById('authenticator-display');
        const btn = document.getElementById('btn-show-code');
        
        if(btn) btn.classList.add('d-none');
        if(display) display.classList.remove('d-none');
        
        fetchCode();
        if (authInterval) clearInterval(authInterval);
        authInterval = setInterval(fetchCode, 1000);
    }

    function fetchCode() {
        fetch('/account/security/2fa/token', { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if(data.success) {
                    const codeEl = document.getElementById('auth-code');
                    const timerEl = document.getElementById('auth-timer');
                    const progressEl = document.getElementById('auth-progress');

                    if(codeEl) codeEl.textContent = data.token.slice(0,3) + ' ' + data.token.slice(3);
                    if(timerEl) timerEl.textContent = Math.floor(data.remaining);
                    
                    if(progressEl) {
                        const percent = (data.remaining / 30) * 100;
                        progressEl.style.width = percent + '%';
                    }
                } else {
                    if(authInterval) clearInterval(authInterval);
                    alert(data.message);
                    location.reload();
                }
            })
            .catch(err => console.error(err));
    }
</script>