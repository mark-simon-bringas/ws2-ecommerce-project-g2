<h1 class="h2 mb-2">Account Settings</h1>
<p class="text-body-secondary mb-5">Manage your personal information and password.</p>

<% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="dashboard-card">
    <div class="card-header bg-transparent border-0 pt-3">
        <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="true">
                    <i class="bi bi-person-circle"></i> Profile
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security-tab-pane" type="button" role="tab" aria-controls="security-tab-pane" aria-selected="false">
                    <i class="bi bi-shield-lock"></i> Security
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="addresses-tab" data-bs-toggle="tab" data-bs-target="#addresses-tab-pane" type="button" role="tab" aria-controls="addresses-tab-pane" aria-selected="false">
                    <i class="bi bi-journal-bookmark-fill"></i> Addresses
                </button>
            </li>
             <li class="nav-item" role="presentation">
                <button class="nav-link" id="more-detail-tab " data-bs-toggle="tab" data-bs-target="#more-detail-tab-pane" type="button" role="tab" aria-controls="more-detail-tab-pane" aria-selected="false">
                    <i class="bi bi-file-lock2"></i>More Detail
                </button>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                <div class="row g-5 py-4">
                    <div class="col-lg-6">
                        <h5 class="card-title mb-4">Personal Information</h5>
                        <form action="/account/settings/update-profile" method="POST">
                            <div class="mb-3">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= user.firstName %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= user.lastName %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" value="<%= user.email %>" disabled>
                                <div class="form-text">Your email address cannot be changed.</div>
                            </div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="security-tab-pane" role="tabpanel" aria-labelledby="security-tab" tabindex="0">
                <div class="row g-5 py-4">
                    <div class="col-lg-6">
                        <h5 class="card-title mb-4">Change Password</h5>
                        <form action="/account/settings/update-password" method="POST">
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">Current Password</label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">New Password</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="addresses-tab-pane" role="tabpanel" aria-labelledby="addresses-tab" tabindex="0">
                <div class="row g-5 py-4">
                    <div class="col-lg-6">
                        <h5 class="card-title mb-4">Add a New Address</h5>
                        <form action="/account/settings/add-address" method="POST">
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label for="addrFirstName" class="form-label">First name</label>
                                    <input type="text" class="form-control" name="firstName" id="addrFirstName" required>
                                </div>
                                <div class="col-sm-6">
                                    <label for="addrLastName" class="form-label">Last name</label>
                                    <input type="text" class="form-control" name="lastName" id="addrLastName" required>
                                </div>
                                <div class="col-12">
                                    <label for="addrAddress" class="form-label">Address</label>
                                    <input type="text" class="form-control" name="address" id="addrAddress" placeholder="1234 Main St" required>
                                </div>
                                <div class="col-md-5">
                                    <label for="addrCountry" class="form-label">Country</label>
                                    <select class="form-select" id="addrCountry" name="country" required>
                                        <option>Philippines</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="addrState" class="form-label">State/Region</label>
                                    <input type="text" class="form-control" name="state" id="addrState" placeholder="e.g. CAR" required>
                                </div>
                                <div class="col-md-3">
                                    <label for="addrZip" class="form-label">Zip</label>
                                    <input type="text" class="form-control" name="zip" id="addrZip" required>
                                </div>
                                <div class="col-12">
                                    <label for="addrPhone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" name="phone" id="addrPhone" required>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="isDefault" id="isDefault">
                                        <label class="form-check-label" for="isDefault">
                                            Set as default address
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary mt-4">Save Address</button>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <h5 class="card-title mb-4">Saved Addresses</h5>
                        <% if (user.addresses && user.addresses.length > 0) { %>
                            <div class="d-flex flex-column gap-3">
                                <% user.addresses.forEach(addr => { %>
                                    <div class="p-3 border rounded-3 position-relative">
                                        <% if (addr.isDefault) { %>
                                            <span class="badge bg-primary-subtle text-primary-emphasis position-absolute top-0 start-0 translate-middle-y ms-3">Default</span>
                                        <% } %>
                                        <p class="fw-semibold mb-1"><%= addr.firstName %> <%= addr.lastName %></p>
                                        <p class="text-body-secondary small mb-2">
                                            <%= addr.address %><br>
                                            <%= addr.state %>, <%= addr.zip %><br>
                                            <%= addr.phone %>
                                        </p>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editAddressModal-<%= addr.addressId %>">Edit</button>
                                            <form action="/account/settings/delete-address/<%= addr.addressId %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this address?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-body-secondary">You have no saved addresses.</p>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="more-detail-tab-pane" role="tabpanel" aria-labelledby="more-detail-tab" tabindex="0">
                <div class="row g-5 py-4">
                    <div class="col-lg-6">
                        <h5 class="card-title mb-4">Change Password</h5>
                        <form action="/account/settings/update-password" method="POST">
                            <div class="mb-3">
                                <label for="User ID" class="form-label">User ID</label>
                                <input type="email" class="form-control" value="<%= user.userId %>" disabled>
                                <div class="form-text">Your User ID cannot be changed.</div>
                            </div>
                            <div class="mb-3">
                                <label for="User ID" class="form-label">Role</label>
                                <input type="email" class="form-control" value="<%= user.role %>" disabled>
                                <div class="form-text">Your Role cannot be changed.</div>
                            </div>
                            <div class="mb-3">
                                <label for="User ID" class="form-label">Verified</label>
                                <input type="email" class="form-control" value="<%= user.isEmailVerified %>" disabled>
                                <div class="form-text">Your User status cannot be changed.</div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% if (user.addresses && user.addresses.length > 0) { %>
    <% user.addresses.forEach(addr => { %>
        <div class="modal fade" id="editAddressModal-<%= addr.addressId %>" tabindex="-1" aria-labelledby="editAddressModalLabel-<%= addr.addressId %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="editAddressModalLabel-<%= addr.addressId %>">Edit Address</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/account/settings/edit-address/<%= addr.addressId %>" method="POST" id="edit-form-<%= addr.addressId %>">
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label for="editFirstName-<%= addr.addressId %>" class="form-label">First name</label>
                                    <input type="text" class="form-control" name="firstName" id="editFirstName-<%= addr.addressId %>" value="<%= addr.firstName %>" required>
                                </div>
                                <div class="col-sm-6">
                                    <label for="editLastName-<%= addr.addressId %>" class="form-label">Last name</label>
                                    <input type="text" class="form-control" name="lastName" id="editLastName-<%= addr.addressId %>" value="<%= addr.lastName %>" required>
                                </div>
                                <div class="col-12">
                                    <label for="editAddress-<%= addr.addressId %>" class="form-label">Address</label>
                                    <input type="text" class="form-control" name="address" id="editAddress-<%= addr.addressId %>" value="<%= addr.address %>" required>
                                </div>
                                <div class="col-md-5">
                                    <label for="editCountry-<%= addr.addressId %>" class="form-label">Country</label>
                                    <select class="form-select" id="editCountry-<%= addr.addressId %>" name="country" required>
                                        <option>Philippines</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="editState-<%= addr.addressId %>" class="form-label">State/Region</label>
                                    <input type="text" class="form-control" name="state" id="editState-<%= addr.addressId %>" value="<%= addr.state %>" required>
                                </div>
                                <div class="col-md-3">
                                    <label for="editZip-<%= addr.addressId %>" class="form-label">Zip</label>
                                    <input type="text" class="form-control" name="zip" id="editZip-<%= addr.addressId %>" value="<%= addr.zip %>" required>
                                </div>
                                <div class="col-12">
                                    <label for="editPhone-<%= addr.addressId %>" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" name="phone" id="editPhone-<%= addr.addressId %>" value="<%= addr.phone %>" required>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="isDefault" id="editIsDefault-<%= addr.addressId %>" <%= addr.isDefault ? 'checked' : '' %>>
                                        <label class="form-check-label" for="editIsDefault-<%= addr.addressId %>">
                                            Set as default address
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" form="edit-form-<%= addr.addressId %>">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
<% } %>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const urlParams = new URLSearchParams(window.location.search);
        const tab = urlParams.get('tab');
        if (tab) {
            const tabElement = document.getElementById(tab + '-tab');
            if (tabElement) {
                const tab = new bootstrap.Tab(tabElement);
                tab.show();
            }
        }
    });
</script>