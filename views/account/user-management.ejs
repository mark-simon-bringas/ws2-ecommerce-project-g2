<div class="settings-page-wrapper" style="max-width: 1200px;">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div class="d-flex align-items-center mb-3 mb-md-0">
            <a href="/account/settings" class="btn btn-icon btn-light rounded-circle me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 fw-bold mb-0">Users</h1>
                <p class="text-body-secondary small mb-0">Customer database & roles</p>
            </div>
        </div>
        <div class="input-group" style="max-width: 300px;">
            <span class="input-group-text bg-white border-end-0 rounded-start-pill ps-3"><i class="bi bi-search text-secondary"></i></span>
            <input type="text" id="user-search" class="form-control border-start-0 rounded-end-pill" placeholder="Search users...">
        </div>
    </div>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <form action="/account/admin/users/delete-multiple" method="POST" id="user-delete-form">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-body p-0">
                <% if (users && users.length > 0) { %>
                    <div class="table-responsive d-none d-lg-block">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 border-0" style="width: 50px;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="select-all-users">
                                        </div>
                                    </th>
                                    <th class="py-3 text-secondary small text-uppercase border-0">User</th>
                                    <th class="py-3 text-secondary small text-uppercase border-0">Role</th>
                                    <th class="py-3 text-secondary small text-uppercase border-0">Status</th>
                                    <th class="py-3 text-secondary small text-uppercase border-0">Verified</th>
                                    <th class="py-3 text-secondary small text-uppercase border-0">Joined</th>
                                    <th class="pe-4 py-3 text-secondary small text-uppercase border-0 text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                    <tr class="user-item">
                                        <td class="ps-4">
                                            <div class="form-check">
                                                <input class="form-check-input user-checkbox" type="checkbox" name="userIds" value="<%= user._id %>">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="profile-avatar-placeholder rounded-circle bg-body-secondary d-flex align-items-center justify-content-center me-3 position-relative overflow-hidden" style="width: 40px; height: 40px; font-size: 1rem;">
                                                    <% if (user.profilePictureUrl) { %>
                                                        <img src="<%= user.profilePictureUrl %>" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                                    <% } else { %>
                                                        <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : 'U' %>
                                                    <% } %>
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-dark user-name"><%= user.firstName %> <%= user.lastName %></div>
                                                    <small class="text-body-secondary user-email"><%= user.email %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <% if (user.role === 'admin') { %>
                                                <span class="badge bg-dark text-white border border-dark-subtle rounded-pill px-3 user-role">Admin</span>
                                            <% } else { %>
                                                <span class="badge bg-light text-secondary border rounded-pill px-3 user-role">Customer</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (user.accountStatus === 'active') { %>
                                                <span class="text-success small fw-medium user-status"><i class="bi bi-dot fs-4 align-middle"></i> Active</span>
                                            <% } else { %>
                                                <span class="text-danger small fw-medium user-status"><i class="bi bi-dot fs-4 align-middle"></i> <%= user.accountStatus %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (user.isEmailVerified) { %>
                                                <i class="bi bi-check-circle-fill text-success fs-5" title="Verified"></i>
                                            <% } else { %>
                                                <i class="bi bi-dash-circle text-secondary fs-5 opacity-50" title="Not Verified"></i>
                                            <% } %>
                                        </td>
                                        <td class="text-secondary">
                                            <%= new Date(user.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="d-flex justify-content-end gap-2">
                                                <a href="/account/admin/users/<%= user._id %>" class="btn btn-sm btn-light rounded-circle border" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-light rounded-circle border text-danger" title="Delete User" onclick="confirmSingleDelete('<%= user._id %>')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-lg-none">
                        <% users.forEach(user => { %>
                            <div class="p-4 border-bottom user-item">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="d-flex align-items-center flex-grow-1 min-w-0">
                                        <div class="form-check me-3 flex-shrink-0">
                                            <input class="form-check-input user-checkbox" type="checkbox" name="userIds" value="<%= user._id %>">
                                        </div>
                                        <div class="profile-avatar-placeholder rounded-circle bg-body-secondary d-flex align-items-center justify-content-center me-3 flex-shrink-0 position-relative overflow-hidden" style="width: 48px; height: 48px; font-size: 1.2rem;">
                                            <% if (user.profilePictureUrl) { %>
                                                <img src="<%= user.profilePictureUrl %>" alt="" style="width: 100%; height: 100%; object-fit: cover;">
                                            <% } else { %>
                                                <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : 'U' %>
                                            <% } %>
                                        </div>
                                        <div class="min-w-0">
                                            <div class="fw-bold text-dark user-name text-truncate"><%= user.firstName %> <%= user.lastName %></div>
                                            <div class="small text-secondary user-email text-truncate" style="max-width: 150px;"><%= user.email %></div>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2 flex-shrink-0 ms-2">
                                         <a href="/account/admin/users/<%= user._id %>" class="btn btn-icon-sm btn-light rounded-circle text-secondary border">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <button type="button" class="btn btn-icon-sm btn-light rounded-circle text-danger border" onclick="confirmSingleDelete('<%= user._id %>')">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center pt-2">
                                    <div class="d-flex gap-3">
                                        <% if (user.role === 'admin') { %>
                                            <span class="badge bg-dark text-white rounded-pill user-role">Admin</span>
                                        <% } %>
                                        <% if (user.accountStatus === 'active') { %>
                                            <span class="badge bg-success-subtle text-success-emphasis rounded-pill user-status">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill user-status"><%= user.accountStatus %></span>
                                        <% } %>
                                    </div>
                                    <span class="text-secondary small"><%= new Date(user.createdAt).toLocaleDateString() %></span>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div id="no-results" class="text-center p-5 d-none">
                        <p class="text-secondary mb-0">No users found matching your search.</p>
                    </div>

                <% } else { %>
                    <div class="text-center p-5">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="bi bi-people text-secondary fs-4"></i>
                        </div>
                        <p class="text-secondary mb-0">No users found.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </form>
</div>

<div class="floating-action-bar" id="delete-action-bar">
    <div class="d-flex justify-content-between align-items-center gap-3">
        <span class="fw-bold text-white small"><span id="selected-delete-count">0</span> Selected</span>
        <button type="submit" form="user-delete-form" class="btn btn-danger btn-sm rounded-pill fw-bold px-3" onclick="return confirm('Are you sure you want to delete these users? This cannot be undone.');">
            <i class="bi bi-trash me-2"></i> Delete Selected
        </button>
    </div>
</div>

<form id="single-delete-form" method="POST" style="display:none;"></form>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
    .btn-icon-sm {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    /* Ensure flex items shrink properly for truncation */
    .min-w-0 {
        min-width: 0;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('user-search');
        const userItems = document.querySelectorAll('.user-item');
        const noResults = document.getElementById('no-results');

        if (searchInput) {
            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                let visibleCount = 0;

                userItems.forEach(item => {
                    const name = item.querySelector('.user-name').textContent.toLowerCase();
                    const email = item.querySelector('.user-email').textContent.toLowerCase();
                    const role = item.querySelector('.user-role') ? item.querySelector('.user-role').textContent.toLowerCase() : '';
                    
                    const isMatch = name.includes(searchTerm) || email.includes(searchTerm) || role.includes(searchTerm);

                    if (isMatch) {
                        item.style.display = ''; 
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });

                if (noResults) {
                    noResults.classList.toggle('d-none', visibleCount > 0);
                }
            });
        }

        const selectAllCheckbox = document.getElementById('select-all-users');
        const checkboxes = document.querySelectorAll('.user-checkbox');
        const deleteActionBar = document.getElementById('delete-action-bar');
        const selectedCountSpan = document.getElementById('selected-delete-count');

        function updateSelection() {
            const checkedCount = document.querySelectorAll('.user-checkbox:checked').length;
            selectedCountSpan.textContent = checkedCount;
            deleteActionBar.classList.toggle('is-active', checkedCount > 0);
        }

        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function() {
                checkboxes.forEach(cb => cb.checked = this.checked);
                updateSelection();
            });
        }

        checkboxes.forEach(cb => {
            cb.addEventListener('change', updateSelection);
        });
    });

    function confirmSingleDelete(userId) {
        if (confirm('Are you sure you want to delete this user? This cannot be undone.')) {
            const form = document.getElementById('single-delete-form');
            form.action = '/account/admin/users/delete/' + userId;
            form.submit();
        }
    }
</script>