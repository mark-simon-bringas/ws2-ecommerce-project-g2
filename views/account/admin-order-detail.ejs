<div class="settings-page-wrapper" style="max-width: 1000px;">
    <div class="d-flex align-items-center mb-4">
        <a href="/account/admin/orders" class="btn btn-icon btn-light rounded-circle me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 fw-bold mb-0">Order Details</h1>
            <p class="text-body-secondary small mb-0">
                #<%= order._id.toString().slice(-6).toUpperCase() %> • <%= new Date(order.orderDate).toLocaleString() %>
            </p>
        </div>
        <div class="ms-auto">
            <% if (order.status === 'Processing') { %>
                <span class="badge bg-info-subtle text-info-emphasis rounded-pill px-3 py-2">Processing</span>
            <% } else if (order.status === 'Shipped') { %>
                <span class="badge bg-primary-subtle text-primary-emphasis rounded-pill px-3 py-2">Shipped</span>
            <% } else if (order.status === 'Delivered') { %>
                <span class="badge bg-success-subtle text-success-emphasis rounded-pill px-3 py-2">Delivered</span>
            <% } else if (order.status === 'Cancelled') { %>
                <span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill px-3 py-2">Cancelled</span>
            <% } %>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white border-bottom p-4">
                    <h6 class="fw-bold mb-0">Order Items (<%= order.items.length %>)</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <% order.items.forEach(item => { %>
                            <div class="list-group-item p-4 d-flex align-items-center gap-3 border-0 border-bottom">
                                <img src="<%= item.thumbnailUrl %>" alt="<%= item.name %>" class="rounded-3 border" style="width: 64px; height: 64px; object-fit: contain; background: #f8f9fa;">
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1"><%= item.name %></h6>
                                    <div class="text-secondary small">Size: <%= item.size %> <span class="mx-2">•</span> Qty: <%= item.qty %></div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold">$<%= item.price.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></div>
                                    <small class="text-secondary">$<%= item.unitPrice %> ea</small>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 p-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-secondary">Subtotal</span>
                        <span class="fw-medium">$<%= order.subtotal.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-secondary">Shipping</span>
                        <span class="fw-medium"><%= order.shippingCost > 0 ? '$' + order.shippingCost.toFixed(2) : 'Free' %></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bold fs-5">$<%= order.total.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3">Manage Order</h6>
                    
                    <form action="/account/admin/orders/update-status/<%= order._id %>" method="POST" class="mb-3">
                        <label class="form-label small text-secondary fw-bold text-uppercase">Update Status</label>
                        <div class="input-group">
                            <select name="newStatus" class="form-select" <%= order.status === 'Cancelled' ? 'disabled' : '' %>>
                                <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %> disabled>Cancelled</option>
                            </select>
                            <button type="submit" class="btn btn-dark" <%= order.status === 'Cancelled' ? 'disabled' : '' %>>Save</button>
                        </div>
                    </form>

                    <% if (order.status !== 'Cancelled') { %>
                        <hr class="my-4">
                        <form action="/account/admin/orders/cancel/<%= order._id %>" method="POST" onsubmit="return confirm('Are you sure? This cannot be undone.');">
                            <button type="submit" class="btn btn-outline-danger w-100 rounded-pill">
                                <i class="bi bi-x-circle me-2"></i> Cancel Order
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-4">Customer Details</h6>
                    
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle bg-body-secondary d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; font-size: 1.2rem;">
                            <%= order.customer.firstName.charAt(0) %>
                        </div>
                        <div>
                            <div class="fw-bold"><%= order.customer.firstName %> <%= order.customer.lastName %></div>
                            <a href="mailto:<%= order.customer.email %>" class="text-decoration-none small text-primary"><%= order.customer.email %></a>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="small text-secondary fw-bold text-uppercase mb-2">Shipping Address</label>
                        <p class="mb-0 text-dark small">
                            <%= order.shippingAddress.address %><br>
                            <%= order.shippingAddress.state %>, <%= order.shippingAddress.zip %><br>
                            <%= order.shippingAddress.country %>
                        </p>
                    </div>

                    <div>
                        <label class="small text-secondary fw-bold text-uppercase mb-2">Payment Method</label>
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-credit-card text-secondary"></i>
                            <span class="small text-dark"><%= order.paymentDetails.method %> <%= order.paymentDetails.last4 ? '•••• ' + order.paymentDetails.last4 : '' %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
</style>