<% 
    function getStatusColor(status) {
        switch(status) {
            case 'Processing': return '#0dcaf0';
            case 'Shipped': return '#0d6efd';
            case 'Delivered': return '#198754';
            case 'Cancelled': return '#dc3545';
            default: return '#6c757d';
        }
    }

    function getActivityColor(type) {
        if (type === 'ORDER') return 'bg-primary-subtle text-primary';
        if (type.includes('DELETE') || type.includes('CANCEL')) return 'bg-danger-subtle text-danger';
        if (type.includes('IMPORT') || type === 'DELIVERED') return 'bg-success-subtle text-success';
        return 'bg-secondary-subtle text-secondary';
    }

    function getActivityIcon(type) {
        if (type === 'ORDER') return 'bi-bag-check-fill';
        if (type.includes('DELETE')) return 'bi-trash-fill';
        if (type.includes('IMPORT')) return 'bi-cloud-arrow-down-fill';
        if (type.includes('PRICE')) return 'bi-tag-fill';
        return 'bi-info-circle-fill';
    }
%>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const socket = io();
        const currencySymbol = "<%= locationData.symbol %>";

        // Listen for dashboard updates
        socket.on('dashboardUpdate', (data) => {
            if (data.type === 'new_order') {
                // 1. Update Order Count
                const orderEl = document.getElementById('kpi-orders');
                const currentOrders = parseInt(orderEl.innerText) || 0;
                orderEl.innerText = currentOrders + 1;
                triggerFlash('card-orders');

                // 2. Update Revenue
                const revEl = document.getElementById('kpi-revenue');
                // Note: The data.orderTotal from server is usually in USD. 
                // Since this is a simple dashboard update, we assume the server converts it 
                // OR we just add the raw value if dashboard is in USD. 
                // Ideally, server sends converted value or we fetch updated stats.
                // For visual simplicity, we will just increment.
                
                // Assuming data.orderTotal matches the dashboard currency context roughly
                let currentRev = parseFloat(revEl.dataset.raw || 0);
                // Simple addition (approximation if currency conversion is complex on client side)
                currentRev += data.orderTotal;
                revEl.dataset.raw = currentRev;
                revEl.innerText = currencySymbol + currentRev.toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 });
                triggerFlash('card-revenue');

                // 3. Add to Activity Log
                addActivityLog(data.message);
            }
        });

        function triggerFlash(elementId) {
            const el = document.getElementById(elementId);
            el.classList.remove('flash-update');
            void el.offsetWidth; // trigger reflow
            el.classList.add('flash-update');
        }

        function addActivityLog(message) {
            const container = document.getElementById('activity-log-container');
            // Remove "No activity" message if present
            if (container.children.length === 1 && container.children[0].classList.contains('text-center')) {
                container.innerHTML = '';
            }

            const now = new Date().toLocaleString();
            const html = `
                <div class="list-item flash-update">
                    <div class="activity-icon bg-primary-subtle text-primary">
                        <i class="bi bi-bag-check-fill"></i>
                    </div>
                    <div class="product-info">
                        <div class="small text-dark fw-medium mb-1" style="line-height: 1.4;">${message}</div>
                        <div class="text-secondary" style="font-size: 0.75rem;">${now}</div>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('afterbegin', html);
            // Limit log items
            if (container.children.length > 10) {
                container.lastElementChild.remove();
            }
        }

        // --- Existing Code Below ---

        // 1. Init Flatpickr
        const fp = flatpickr("#dateRange", {
            mode: "range",
            dateFormat: "Y-m-d",
            maxDate: "today",
            disableMobile: "true",
            onClose: function(selectedDates, dateStr, instance) {
                if (dateStr) document.getElementById('dashboardFilterForm').submit();
            }
        });

        // 2. Highlight Active Filter Button
        const currentVal = document.getElementById('dateRange').value;
        const fmt = d => d.toISOString().split('T')[0];
        const today = new Date();
        const ranges = {
            'today': fmt(today),
            'week': `${fmt(new Date(today.getTime() - 7*86400000))} to ${fmt(today)}`,
            'month': `${fmt(new Date(today.getTime() - 30*86400000))} to ${fmt(today)}`,
            'year': `${fmt(new Date(today.getFullYear(), 0, 1))} to ${fmt(today)}`
        };

        Object.keys(ranges).forEach(key => {
            if(currentVal === ranges[key]) {
                const btn = document.getElementById(`btn-${key}`);
                if(btn) btn.classList.add('active');
            }
        });

        // 3. Quick Date Helper
        window.setQuickDate = function(type) {
            const end = new Date();
            let start = new Date();

            if (type === 'today') {
                // start is today
            } else if (type === 'week') {
                start.setDate(end.getDate() - 7);
            } else if (type === 'month') {
                start.setDate(end.getDate() - 30);
            } else if (type === 'year') {
                start = new Date(new Date().getFullYear(), 0, 1);
            }
            
            const rangeStr = type === 'today' ? fmt(start) : `${fmt(start)} to ${fmt(end)}`;
            document.getElementById('dateRange').value = rangeStr;
            document.getElementById('dashboardFilterForm').submit();
        };

        // 4. Charts
        const rawSales = <%- JSON.stringify(data.dailySales || []) %>;
        const rawStatus = <%- JSON.stringify(data.orderStatus || []) %>;
        
        // Sales Chart
        const salesCtx = document.getElementById('salesChart');
        if (salesCtx && rawSales.length > 0) {
            new Chart(salesCtx, {
                type: 'line',
                data: {
                    labels: rawSales.map(d => d.date),
                    datasets: [{
                        label: 'Revenue',
                        data: rawSales.map(d => d.revenue),
                        borderColor: '#111',
                        backgroundColor: (ctx) => {
                            const grad = ctx.chart.ctx.createLinearGradient(0,0,0,300);
                            grad.addColorStop(0, 'rgba(17,17,17,0.05)');
                            grad.addColorStop(1, 'rgba(17,17,17,0)');
                            return grad;
                        },
                        borderWidth: 2,
                        pointRadius: 0,
                        pointHoverRadius: 6,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false }, tooltip: { intersect: false, callbacks: { label: c => currencySymbol + c.parsed.y.toLocaleString() } } },
                    scales: { x: { grid: { display: false }, ticks: { maxTicksLimit: 6, font: { size: 10 } } }, y: { border: { display: false }, grid: { borderDash: [4,4] }, ticks: { font: { size: 10 }, callback: v => currencySymbol + v } } },
                    interaction: { mode: 'index', intersect: false }
                }
            });
        }

        // Status Chart
        const statusCtx = document.getElementById('statusChart');
        if (statusCtx && rawStatus.length > 0) {
            const colors = { 'Processing': '#0dcaf0', 'Shipped': '#0d6efd', 'Delivered': '#198754', 'Cancelled': '#dc3545' };
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: rawStatus.map(s => s._id),
                    datasets: [{
                        data: rawStatus.map(s => s.count),
                        backgroundColor: rawStatus.map(s => colors[s._id] || '#6c757d'),
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: { legend: { display: false } }
                }
            });
        }
    });
</script>