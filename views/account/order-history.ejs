<div class="settings-page-wrapper" style="max-width: 800px;">
    <div class="d-flex align-items-center mb-4">
        <a href="javascript:history.back()" class="btn btn-icon btn-light rounded-circle me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
        <div>
            <h1 class="h3 fw-bold mb-0">Order History</h1>
            <p class="text-body-secondary small mb-0">Track, return, or buy again</p>
        </div>
    </div>

    <% if (orders && orders.length > 0) { %>
        <div class="d-flex flex-column gap-4">
            <% orders.forEach(order => { %>
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="fw-bold mb-1">
                                    Order #<%= order._id.toString().slice(-7).toUpperCase() %>
                                </h6>
                                <p class="text-secondary small mb-0">
                                    <%= new Date(order.orderDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                </p>
                            </div>
                            <div class="text-end">
                                <h6 class="fw-bold mb-1"><%= locationData.symbol %><%= order.total.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></h6>
                                <a href="/account/orders/<%= order._id %>" class="small text-primary text-decoration-none fw-medium">View Details &gt;</a>
                            </div>
                        </div>

                        <div class="mb-4 ps-3 border-start border-2 border-light">
                            <ul class="list-unstyled mb-0">
                                <% order.items.forEach(item => { %>
                                    <li class="text-secondary small mb-1 d-flex align-items-center">
                                        <i class="bi bi-dot fs-5 lh-1 me-1 text-body-tertiary"></i>
                                        <span class="text-truncate" style="max-width: 250px;"><%= item.name %></span>
                                        <span class="text-body-tertiary ms-1">x<%= item.qty %></span>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>

                        <% if (order.status === 'Cancelled') { %>
                            <div class="alert alert-secondary py-3 px-3 d-flex align-items-center gap-2 rounded-3 mb-0">
                                <i class="bi bi-x-circle-fill text-secondary"></i>
                                <div>
                                    <span class="fw-bold text-secondary d-block" style="font-size: 0.9rem;">Order Cancelled</span>
                                    <span class="small text-secondary opacity-75">This order has been cancelled.</span>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="whats-next-timeline mt-2">
                                <div class="timeline-step <%= ['Processing', 'Shipped', 'Delivered'].includes(order.status) ? 'active' : '' %>">
                                    <div class="timeline-icon"><i class="bi bi-check-lg"></i></div>
                                    <div class="timeline-content">
                                        <strong>Confirmed</strong>
                                        <p class="small text-body-secondary">Received</p>
                                    </div>
                                </div>

                                <div class="timeline-step <%= ['Shipped', 'Delivered'].includes(order.status) ? 'active' : '' %>">
                                    <div class="timeline-icon"><i class="bi bi-truck"></i></div>
                                    <div class="timeline-content">
                                        <strong>Shipped</strong>
                                        <p class="small text-body-secondary">On the way</p>
                                    </div>
                                </div>

                                <div class="timeline-step <%= ['Delivered'].includes(order.status) ? 'active' : '' %>">
                                    <div class="timeline-icon"><i class="bi bi-box-seam-fill"></i></div>
                                    <div class="timeline-content">
                                        <strong>Delivered</strong>
                                        <p class="small text-body-secondary">Arrived</p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="bi bi-bag text-secondary fs-1"></i>
            </div>
            <h5 class="fw-bold">No orders yet</h5>
            <p class="text-secondary mb-4">Looks like you haven't made your first drop yet.</p>
            <a href="/products" class="btn btn-dark rounded-pill px-4 py-2">Start Shopping</a>
        </div>
    <% } %>
</div>

<style>
    .settings-page-wrapper {
        margin: 0 auto;
        padding: 1rem;
    }
    .btn-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--border-color);
    }
    /* Ensure timeline fits well in the card */
    .whats-next-timeline {
        padding: 0; /* Remove default padding for tighter fit */
    }
    .timeline-step {
        padding-bottom: 0; /* Remove bottom padding used in full page view */
    }
</style>