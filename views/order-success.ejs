<div class="container my-5 py-5 order-success-page">
    <div class="row gx-lg-5">
        
        <div class="col-lg-7">
            <div class="d-flex align-items-center gap-3 mb-4 success-header">
                <i class="bi bi-check-circle-fill"></i>
                <h1 class="h2 mb-0 fw-bold">Thank you for your order!</h1>
            </div>

            <div class="confirmation-card">
                <div class="card-section">
                    <h5 class="fw-semibold">Your order is confirmed</h5>
                    <p class="text-body-secondary">You'll receive a confirmation email with your order details soon.</p>
                </div>
                <div class="card-section">
                    <h6 class="fw-semibold">Shipping to:</h6>
                    <p class="text-body-secondary mb-0">
                        <%= order.customer.firstName %> <%= order.customer.lastName %><br>
                        <%= order.shippingAddress.address %><br>
                        <%= order.shippingAddress.state %>, <%= order.shippingAddress.zip %>
                    </p>
                </div>
                 <div class="card-section">
                    <h6 class="fw-semibold">Payment</h6>
                    <p class="text-body-secondary mb-0">
                        <% if (order.paymentDetails.last4) { %>
                            <i class="bi bi-credit-card-fill"></i> <%= order.paymentDetails.method %> ending in <%= order.paymentDetails.last4 %>
                        <% } else { %>
                            <i class="bi bi-cash-stack"></i> <%= order.paymentDetails.method %>
                        <% } %>
                    </p>
                </div>
            </div>

            <div class="whats-next-timeline mt-4">
                <div class="timeline-step active">
                    <div class="timeline-icon"><i class="bi bi-check-lg"></i></div>
                    <div class="timeline-content">
                        <strong>Order Confirmed</strong>
                        <p class="text-body-secondary small">We've received your order.</p>
                    </div>
                </div>
                <div class="timeline-step">
                    <div class="timeline-icon"><i class="bi bi-truck"></i></div>
                    <div class="timeline-content">
                        <strong>Order Shipped</strong>
                        <p class="text-body-secondary small">We'll notify you once it's on its way.</p>
                    </div>
                </div>
                <div class="timeline-step">
                    <div class="timeline-icon"><i class="bi bi-box-seam-fill"></i></div>
                    <div class="timeline-content">
                        <strong>Delivered</strong>
                        <p class="text-body-secondary small">Your order has arrived.</p>
                    </div>
                </div>
            </div>

            <hr class="my-4">
            
            <% if (!currentUser) { %>
                <div class="dashboard-card text-center">
                     <div class="card-body">
                        <h5 class="fw-semibold">Track your order</h5>
                        <p class="text-body-secondary">Create an account to easily track your order status and manage your purchase history.</p>
                        <a href="/users/register?email=<%= order.customer.email %>" class="btn btn-secondary">Create an Account</a>
                    </div>
                </div>
                <hr class="my-4">
            <% } %>

            <div class="d-flex justify-content-between align-items-center">
                 <a href="/products" class="btn btn-primary">Continue Shopping</a>
                 <a href="#" class="text-body-secondary small">Need help? Contact Us</a>
            </div>

        </div>

        <div class="col-lg-5">
            <h4 class="mb-3 fw-bold">Order Summary</h4>
            <div class="summary-box">
                <ul class="list-group list-group-flush">
                   <li class="list-group-item d-flex justify-content-between px-0">
                       <span>Subtotal</span>
                       <strong><%= locationData.symbol %><%= order.subtotal.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong>
                   </li>
                   <li class="list-group-item d-flex justify-content-between px-0">
                       <span>Delivery/Shipping</span>
                       <strong><%= order.shippingCost > 0 ? locationData.symbol + order.shippingCost.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) : 'Free' %></strong>
                   </li>
                   <li class="list-group-item d-flex justify-content-between px-0 fs-5">
                       <strong class="fw-bolder">Total</strong>
                       <strong class="fw-bolder"><%= locationData.symbol %><%= order.total.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong>
                   </li>
               </ul>
            </div>
            
            <% order.items.forEach(item => { %>
               <div class="summary-product-item mt-3">
                   <img src="<%= item.thumbnailUrl %>" alt="<%= item.name %>">
                   <div class="summary-product-details">
                       <p class="summary-product-title"><%= item.name %></p>
                       <p class="summary-product-meta">Qty: <%= item.qty %></p>
                       <p class="summary-product-meta">Size: <%= item.size %></p>
                   </div>
                   <p class="summary-product-price"><%= locationData.symbol %><%= item.price.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
               </div>
            <% }) %>
        </div>
    </div>
</div>