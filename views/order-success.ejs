<div class="container my-5 py-5 order-success-page">
    <div class="row gx-lg-5 justify-content-center">
        
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-success text-white mb-3" style="width: 64px; height: 64px;">
                    <i class="bi bi-check-lg fs-1"></i>
                </div>
                <h1 class="display-5 fw-bold mb-2">Thank you for your order!</h1>
                <p class="text-body-secondary lead">
                    Your order <span class="fw-bold text-dark">#<%= order._id.toString().slice(-7).toUpperCase() %></span> has been placed.
                </p>
                <p class="text-body-secondary small">
                    We've sent a confirmation email to <strong><%= order.customer.email %></strong>.
                </p>
            </div>

            <div class="card border-0 shadow-sm rounded-4 mb-5 overflow-hidden">
                <div class="card-body p-4 p-md-5">
                    <div class="whats-next-timeline">
                        <div class="timeline-step active">
                            <div class="timeline-icon"><i class="bi bi-check-lg"></i></div>
                            <div class="timeline-content">
                                <strong>Confirmed</strong>
                                <p class="small text-body-secondary d-none d-md-block">We've received your order.</p>
                            </div>
                        </div>
                        <div class="timeline-step">
                            <div class="timeline-icon"><i class="bi bi-truck"></i></div>
                            <div class="timeline-content">
                                <strong>Shipped</strong>
                                <p class="small text-body-secondary d-none d-md-block">We'll notify you when it ships.</p>
                            </div>
                        </div>
                        <div class="timeline-step">
                            <div class="timeline-icon"><i class="bi bi-box-seam-fill"></i></div>
                            <div class="timeline-content">
                                <strong>Delivered</strong>
                                <p class="small text-body-secondary d-none d-md-block">Package arrived.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-lg-7">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-header bg-white border-bottom p-4">
                            <h5 class="fw-bold mb-0">Order Details</h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-4 mb-4">
                                <div class="col-md-6">
                                    <h6 class="small fw-bold text-secondary text-uppercase mb-2">Shipping Address</h6>
                                    <p class="mb-0 small">
                                        <%= order.customer.firstName %> <%= order.customer.lastName %><br>
                                        <%= order.shippingAddress.address %><br>
                                        <%= order.shippingAddress.state %>, <%= order.shippingAddress.zip %>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                     <h6 class="small fw-bold text-secondary text-uppercase mb-2">Payment Method</h6>
                                    <p class="mb-0 small d-flex align-items-center gap-2">
                                        <% if (order.paymentDetails.last4) { %>
                                            <i class="bi bi-credit-card-fill"></i> <%= order.paymentDetails.method %> •••• <%= order.paymentDetails.last4 %>
                                         <% } else { %>
                                            <i class="bi bi-cash-stack"></i> <%= order.paymentDetails.method %>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            
                            <hr class="border-light my-4">
                            
                            <h6 class="small fw-bold text-secondary text-uppercase mb-3">Items Ordered</h6>
                            <div class="list-group list-group-flush">
                                <% order.items.forEach(item => { %>
                                   <div class="list-group-item px-0 border-0 d-flex align-items-center gap-3">
                                        <div class="position-relative flex-shrink-0">
                                             <img src="<%= item.thumbnailUrl %>" alt="<%= item.name %>" class="rounded-3 border bg-light" style="width: 64px; height: 64px; object-fit: contain;">
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary border border-light" style="font-size: 0.65rem;"><%= item.qty %></span>
                                        </div>
                                        <div class="flex-grow-1" style="min-width: 0;">
                                            <h6 class="fw-bold mb-0 small text-truncate"><%= item.name %></h6>
                                            <small class="text-body-secondary">Size: <%= item.size %></small>
                                        </div>
                                         <div class="text-end flex-shrink-0">
                                            <span class="fw-medium small"><%= locationData.symbol %><%= item.price.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="card border-0 shadow-sm rounded-4 bg-light h-100">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4">Summary</h5>
                             <ul class="list-unstyled mb-0 d-flex flex-column gap-2">
                                <li class="d-flex justify-content-between small">
                                    <span class="text-secondary">Subtotal</span>
                                     <span class="fw-medium"><%= locationData.symbol %><%= order.subtotal.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                                </li>
                                <% if (order.discount && order.discount > 0) { %>
                                    <li class="d-flex justify-content-between small text-success">
                                        <span>Discount (<%= order.voucherCode || 'Applied' %>)</span>
                                        <span class="fw-medium">-<%= locationData.symbol %><%= order.discount.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                                    </li>
                                 <% } %>
                                <li class="d-flex justify-content-between small">
                                    <span class="text-secondary">Shipping</span>
                                     <span class="fw-medium"><%= order.shippingCost > 0 ? locationData.symbol + order.shippingCost.toLocaleString(undefined, { minimumFractionDigits: 2 }) : 'Free' %></span>
                                </li>
                                <li class="d-flex justify-content-between align-items-center pt-3 mt-2 border-top border-secondary-subtle">
                                     <span class="fw-bold fs-5">Total</span>
                                    <span class="fw-bold fs-4"><%= locationData.symbol %><%= order.total.toLocaleString(undefined, { minimumFractionDigits: 2 }) %></span>
                                </li>
                             </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5 d-flex flex-column flex-md-row justify-content-center gap-3">
                <a href="/products" class="btn btn-dark rounded-pill px-4 py-3 px-md-5 fw-bold w-100 w-md-auto">Continue Shopping</a>
                <% if (currentUser) { %>
                    <a href="/account/orders" class="btn btn-outline-secondary rounded-pill px-4 py-3 px-md-5 fw-bold w-100 w-md-auto">View Order History</a>
                <% } %>
            </div>

        </div>
    </div>
</div>