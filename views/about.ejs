<div class="container my-5 overflow-hidden">
    <div class="text-center pt-4 pb-5">
        <%# Updated: Responsive typography to prevent overflow %>
        <h1 class="display-5 display-lg-3 fw-bold"><%= mainHeading %></h1>
        <p class="lead text-body-secondary mt-3 fst-italic">"<%= subHeading %>"</p>
    </div>

    <%# Updated: Responsive gutter (g-4 on mobile, g-5 on desktop) %>
    <div class="row g-4 g-lg-5 align-items-center mb-5 pb-5 border-bottom">
        <div class="col-lg-6">
            <img src="<%= story.image.src %>" class="img-fluid rounded-4 shadow-sm" alt="<%= story.image.alt %>">
        </div>
        <div class="col-lg-6">
            <h2 class="display-5 fw-bold mb-3"><%= story.heading %></h2>
            <p class="lead text-body-secondary"><%= story.p1 %></p>
            <p class="text-body-secondary"><%= story.p2 %></p>
        </div>
    </div>

    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold"><%= team.heading %></h2>
        <p class="lead text-body-secondary mt-3"><%= team.subHeading %></p>
    </div>

    <div class="row g-4 justify-content-center">
        <% team.members.forEach(member => { %>
        <div class="col-md-6 col-lg-5">
            <div class="card h-100 text-center">
                <div class="card-body p-4">
                    <h3 class="fw-bold"><%= member.name %></h3>
                    <p class="text-primary fw-medium"><i class="bi bi-code-slash me-2"></i><%= member.role %></p>
                    <p class="text-body-secondary mt-3"><%= member.bio %></p>
                    <a href="<%= member.github %>" target="_blank" class="btn btn-dark mt-2">
                        <i class="bi bi-github me-2"></i> GitHub Profile
                    </a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>