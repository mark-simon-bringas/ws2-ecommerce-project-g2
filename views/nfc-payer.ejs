<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#000000">
    <title>Sneakslab Pay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        * { box-sizing: border-box; }
        
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #000;
            color: #fff;
            font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        .pay-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            background: radial-gradient(circle at 50% 120%, #1a1a1a 0%, #000000 70%);
        }

        /* --- Logo --- */
        .brand-logo {
            position: absolute;
            top: 50px;
            opacity: 1;
            filter: drop-shadow(0 0 10px rgba(255,255,255,0.2));
            transition: opacity 0.3s;
        }

        /* --- Premium Card Styling --- */
        .card-wrapper {
            perspective: 1200px;
            cursor: pointer;
            -webkit-tap-highlight-color: transparent;
            z-index: 10;
        }

        .digital-card {
            width: 340px;
            height: 215px;
            border-radius: 20px;
            /* Midnight Titanium Gradient */
            background: linear-gradient(145deg, #2b2b2b 0%, #1c1c1c 40%, #000000 100%);
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.9), 
                inset 0 1px 0 rgba(255, 255, 255, 0.15),
                inset 0 -1px 0 rgba(0, 0, 0, 0.5);
            padding: 28px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: relative;
            overflow: hidden;
            transition: all 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        /* Gloss Effect */
        .digital-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at 50% 50%, rgba(255,255,255,0.03) 0%, transparent 60%);
            pointer-events: none;
        }

        .card-chip {
            width: 48px;
            height: 36px;
            background: linear-gradient(135deg, #e0e0e0 0%, #a0a0a0 100%);
            border-radius: 6px;
            position: relative;
            box-shadow: inset 0 1px 2px rgba(255,255,255,0.4);
            border: 1px solid rgba(0,0,0,0.2);
        }
        /* Chip detail lines */
        .card-chip::after {
            content: '';
            position: absolute;
            top: 50%; left: 0; width: 100%; height: 1px; background: rgba(0,0,0,0.1);
        }
        .card-chip::before {
            content: '';
            position: absolute;
            left: 33%; top: 0; width: 1px; height: 100%; background: rgba(0,0,0,0.1);
            box-shadow: 15px 0 0 rgba(0,0,0,0.1);
        }

        .card-number {
            font-family: "SF Mono", "Courier New", monospace;
            font-size: 1.3rem;
            letter-spacing: 3px;
            color: rgba(255,255,255,0.9);
            text-shadow: 0 2px 4px rgba(0,0,0,0.8);
            margin-top: 10px;
        }

        .card-footer-row {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
        }

        .card-holder {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: rgba(255,255,255,0.6);
            margin-bottom: 4px;
        }

        .card-logo {
            font-weight: 900;
            font-style: italic;
            font-size: 1.2rem;
            color: #fff;
            opacity: 0.9;
        }

        /* --- Processing Animation (Apple Pay Style) --- */
        .processing .digital-card {
            transform: scale(0.95);
            border-color: rgba(255,255,255,0.3);
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.15);
        }

        .instruction-text {
            margin-top: 50px;
            font-weight: 400;
            font-size: 1rem;
            letter-spacing: 0.5px;
            color: #fff;
            transition: opacity 0.3s;
        }

        /* --- Success Screen --- */
        #success-overlay {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: #000;
            z-index: 100;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.4s ease;
        }

        #success-overlay.visible {
            opacity: 1;
            pointer-events: all;
        }

        /* Apple Pay Checkmark SVG Animation */
        .checkmark-wrapper {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 3px solid #28cd41; /* Apple Green */
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transform: scale(0.8);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        #success-overlay.visible .checkmark-wrapper {
            opacity: 1;
            transform: scale(1);
        }

        .checkmark-path {
            fill: none;
            stroke: #28cd41;
            stroke-width: 4;
            stroke-linecap: round;
            stroke-linejoin: round;
            stroke-dasharray: 100;
            stroke-dashoffset: 100;
        }

        #success-overlay.visible .checkmark-path {
            animation: drawCheck 0.5s ease-out forwards 0.3s;
        }

        @keyframes drawCheck {
            to { stroke-dashoffset: 0; }
        }

        .success-text {
            margin-top: 30px;
            font-size: 1.25rem;
            font-weight: 600;
            color: #fff;
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.5s ease 0.4s;
        }

        #success-overlay.visible .success-text {
            opacity: 1;
            transform: translateY(0);
        }
        
        .closing-text {
            font-size: 0.8rem;
            color: rgba(255,255,255,0.4);
            margin-top: 10px;
            opacity: 0;
            transition: opacity 1s ease 2s;
        }
        #success-overlay.visible .closing-text { opacity: 1; }

    </style>
</head>
<body>

    <div class="pay-container" id="mainContainer">
        <div class="brand-logo">
            <img src="/icons/favbutton.png" alt="Sneakslab" width="60" height="60" style="object-fit: contain;">
        </div>

        <div class="card-wrapper" onclick="initiatePayment()">
            <div class="digital-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="card-chip"></div>
                    <i class="bi bi-broadcast fs-3 text-white opacity-75"></i>
                </div>
                
                <div class="card-number">
                    <span>••••</span> <span>••••</span> <span>••••</span> <span>4242</span>
                </div>

                <div class="card-footer-row">
                    <div>
                        <div class="card-holder">SNEAKSLAB PAY</div>
                        <div style="font-size: 0.8rem; opacity: 0.8;">Verified</div>
                    </div>
                    <div class="card-logo">VISA</div>
                </div>
            </div>
        </div>

        <p class="instruction-text">Hold Near Reader</p>
    </div>

    <div id="success-overlay">
        <div class="checkmark-wrapper">
            <svg class="checkmark-svg" width="60" height="60" viewBox="0 0 50 50">
                <path class="checkmark-path" d="M12 25 L22 35 L38 15" />
            </svg>
        </div>
        <div class="success-text">Done</div>
        <div class="closing-text">Closing securely in 10s...</div>
    </div>

    <audio id="paymentSound" preload="auto">
        <source src="https://www.myinstants.com/media/sounds/mastercard-pay.mp3" type="audio/mpeg">
    </audio>

    <script>
        let isProcessing = false;

        function initiatePayment() {
            if (isProcessing) return;
            isProcessing = true;

            const container = document.getElementById('mainContainer');
            const audio = document.getElementById('paymentSound');
            const instruction = document.querySelector('.instruction-text');

            // Haptic Feedback (Tap)
            if (navigator.vibrate) navigator.vibrate(10);

            // UI State: Processing
            container.classList.add('processing');
            instruction.innerText = "Processing...";
            instruction.style.opacity = "0.7";

            // Send Request
            fetch('/checkout/nfc-trigger', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ transactionId: '<%= transactionId %>' })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    // Slight delay for effect
                    setTimeout(() => {
                        showSuccess(audio);
                    }, 1000);
                } else {
                    alert("Payment Failed");
                    resetUI();
                }
            })
            .catch(err => {
                console.error(err);
                alert("Connection Error");
                resetUI();
            });
        }

        function showSuccess(audio) {
            // Play Sound
            audio.currentTime = 0;
            audio.play().catch(e => console.log("Audio autoplay prevented"));

            // Strong Haptic Success
            if (navigator.vibrate) navigator.vibrate([40, 50, 40]);

            // Show Success Overlay
            document.getElementById('success-overlay').classList.add('visible');
            
            // Hide Background Elements
            document.querySelector('.brand-logo').style.opacity = '0';
            document.querySelector('.instruction-text').style.opacity = '0';

            // Auto Close after 10 seconds
            setTimeout(() => {
                try {
                    window.close();
                } catch(e) {
                    console.log("Script cannot close window not opened by script");
                    window.location.href = "/"; // Fallback to home if close fails
                }
            }, 10000);
        }

        function resetUI() {
            isProcessing = false;
            document.getElementById('mainContainer').classList.remove('processing');
            document.querySelector('.instruction-text').innerText = "Hold Near Reader";
            document.querySelector('.instruction-text').style.opacity = "1";
        }
    </script>
</body>
</html>